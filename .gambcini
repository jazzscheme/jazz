(load "kernel/build")


(define-macro (cfg . rest)
  `(jazz.manage-configurations ',rest))


(define-macro (configure
                #!key
                (name #f)
                (system #f)
                (platform #f)
                (windowing #f)
                (safety #f)
                (options '())
                (directory #f))
  `(jazz.configure ',name
                   ',system
                   ',platform
                   ',windowing
                   ',safety
                   ',options
                   ',directory))


(define-macro (make
                #!optional
                (target #f))
  `(jazz.make ',target))
