(load "kernel/build")


(define-macro (configure
                #!key
                (name #f)
                (system #f)
                (platform #f)
                (safety #f)
                (options '())
                (directory #f))
  `(jazz.configure ',name
                   ',system
                   ',platform
                   ',safety
                   ',options
                   ',directory))


(define-macro (make
                #!optional
                (target #f))
  `(jazz.make ',target))
