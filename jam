#!/bin/sh

DIRECTORY=$(dirname "$0")
ABS_DIRECTORY=$(cd "$DIRECTORY"; pwd)

GSC=$ABS_DIRECTORY/gambit/bin/gsc
JAM=$ABS_DIRECTORY/kernel/jam.scm

if [ ! -f "$GSC" ]; then
	echo "Unable to find gambit-jazz. Please run jbs to bootstrap."
	exit 1
fi

if [ ! -f "$JAM" ]; then
	echo "Unable to find jazz. Please run jbs to bootstrap."
	exit 1
fi

exec "$GSC" -i "$JAM" "$@"
