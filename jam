#!/bin/sh

REL="$(dirname "$0")"
ABS="$(cd "$REL"; pwd)"

if [ -f "$REL/.jam" ]; then
    source "$REL/.jam"
fi

gambitinstall () {
    [ -n "${GAMBITDIR:+x}" ] && echo "$GAMBITDIR" || echo "$REL/foreign/gambit"
}

GAMBITSOURCE="$REL/gambit"
GAMBITINSTALL=$(gambitinstall)
GSC="$GAMBITINSTALL/bin/gsc"
SCM="$REL/kernel/jam.scm"

## no git submodules
#UPDATE_SUBMODULES="true"
UPDATE_SUBMODULES="false"

gambit_init () {
    cd "$REL"
    git submodule init
}

gambit_update () {
    cd "$REL"
    git submodule update
}

gambit_configure () {
    PREFIX="$ABS/foreign/gambit"
    cd "$GAMBITSOURCE" &&
    ./configure --prefix="$PREFIX" $(host)
}

gambit_make () {
    ( [ -f "$GAMBITSOURCE/config.status" ] || gambit_configure ) &&
    cd "$GAMBITSOURCE" &&
    make $(jobs) from-scratch
}

gambit_install () {
    cd "$GAMBITSOURCE" &&
    make install
}

gambit_clean () {
    cd "$GAMBITSOURCE" &&
    make clean
}

gambit_realclean () {
    cd "$GAMBITSOURCE" &&
    make realclean
}

gambit () {
    (gambit_init) &&
    (gambit_update) &&
    (gambit_make) &&
    (gambit_install)
}

gambit_dispatch () {
    case "$1" in
    "init" )
        gambit_init
        ;;
    "update" )
        gambit_update
        ;;
    "configure" )
        gambit_configure
        ;;
    "make" )
        gambit_make
        ;;
    "install" )
        gambit_install
        ;;
    "clean" )
        gambit_clean
        ;;
    "realclean" )
        gambit_realclean
        ;;
    "" )
        gambit
        ;;
    * )
        echo "Unknown gambit option : $1"
        return 1
        ;;
    esac
}

jobs () {
    [ -n "${GAMBITJOBS:+x}" ] && echo "-j $GAMBITJOBS" || echo ""
}

host () {
    if [ ! -n "${GAMBITMULTIHOST:+x}" ] || [ "$GAMBITMULTIHOST" == "0" ]; then
        echo "--enable-single-host"
    fi
}

display_module_info () {
    echo "$1"
    if [ -d "$2" ]; then
        cd "$2" &&
        git log -1
    fi
}

display_info () {
    (display_module_info "Jazz" "$REL")
}

while getopts "l" OPTION; do
    case $OPTION in
    "l" )
        UPDATE_SUBMODULES="false"
        ;;
    esac
done

shift $((OPTIND-1))

case "$1" in
    "gambit" )
        gambit_dispatch $2
        exit
        ;;

    "deploy" )
        deploy
        exit
        ;;

    "info" )
        display_info
        exit
        ;;

    "environment" )
        echo "REL: $REL"
        echo "ABS: $ABS"
        echo "GAMBITSOURCE: $GAMBITSOURCE"
        echo "GAMBITINSTALL: $GAMBITINSTALL"
        echo "GSC: $GSC"
        echo "SCM: $SCM"
        echo $(host)
        exit
        ;;
esac

if [ ! -f "$GSC" ]; then
    gambit
fi

if [ ! -f "$GSC" ]; then
    echo "Unable to find ./foreign/gambit/bin/gsc"
    exit 1
fi

exec "$GSC" -:="$GAMBITINSTALL" -i "$SCM" "$@"
