(module foundation.backend.javascript.emit jazz


(import (jazz.backend))


;;;
;;;; Module
;;;


(define-emit (module (javascript backend) declaration walker resume environment)
  (let ((body-expansion (emit-namespace-statements (get-body declaration) declaration environment backend)))
    `(%begin
       ,@body-expansion)))


;;;
;;;; Declare
;;;


(define-emit (declare (javascript backend) expression declaration walker resume environment)
  #f)


;;;
;;;; Proclaim
;;;


(define-emit (proclaim (javascript backend) expression declaration walker resume environment)
  #f)


;;;
;;;; Begin
;;;


(define-emit (begin (javascript backend) expression declaration walker resume environment code)
  `(%begin ,@(sourcified-form code)))


;;;
;;;; Reference
;;;


(define-emit (autoload-reference (javascript backend) declaration walker resume environment referenced-declaration)
  (unimplemented 'autoload-reference))


(define-emit (define-reference (javascript backend) declaration)
  (get-locator declaration))


(define-emit (export-reference (javascript backend) declaration)
  (get-symbol declaration))


(define-emit (export-syntax-reference (javascript backend) declaration)
  (get-symbol declaration))


(define-emit (local-variable-reference (javascript backend) declaration)
  (get-variable declaration))


(define-emit (special-form-reference (javascript backend) binding)
  (get-name binding))


(define-emit (variable-reference (javascript backend) binding source-declaration walker resume environment)
  (get-name binding))


(define-emit (lexical-binding-reference (javascript backend) binding)
  (get-name binding))


(define-emit (named-parameter-reference (javascript backend) binding)
  (get-name binding))


(define-emit (symbol-reference (javascript backend) binding)
  (get-name binding))


;;;
;;;; Call
;;;


(define-emit (call (javascript backend) expression declaration walker resume environment)
  #f)


(define-emit (expression-call (javascript backend) expression declaration operator arguments)
  `(,(sourcified-form operator) ,@(codes-forms arguments)))


;;;
;;;; Binding Call
;;;


(define-emit (walk-binding-binding-call (javascript backend) binding binding-src operator arguments)
  `(,(sourcified-form operator) ,@(codes-forms arguments)))


;;;
;;;; Constant
;;;


(define-emit (constant (javascript backend) expression)
  (get-expansion expression))


;;;
;;;; Assignment
;;;


(define-emit (define-assignment (javascript backend) declaration source-declaration walker resume environment value-code)
  (let ((locator (get-locator declaration)))
    `(= ,locator ,(sourcified-form value-code))))


(define-emit (variable-assignment (javascript backend) binding source-declaration walker resume environment binding-code value-code)
  `(= ,binding-code ,(sourcified-form value-code))))
