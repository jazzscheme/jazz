(package jazz.cairo
  
  (title "Cairo")
  (description "Interface to the Cairo 2D graphics library")
  (authors "Guillaume Cartier")
  (stage release)
  (root "src")
  (products (jazz.cairo (test jazz.cairo.test)
                        (unit jazz.cairo.product)
                        (update jazz.cairo
                                jazz.cairo.product)
                           (library
                             (link-options
                                (windows (libdir "~~jazz/foreign/cairo/lib/windows")
                                         "-lcairo"
                                         "-mwindows")
                                (mac  (pkg-config "--libs" "cairo"))
                                (else (pkg-config "--libs" "cairo"))))
                        (dependencies jazz
                                      jazz.fontconfig
                                      jazz.foreign
                                      jazz.freetype
                                      jazz.zlib))
            (cairo (alias jazz.cairo)))
  (project ".project"))
