(package jazz.cairo
  
  (title "Cairo")
  (description "Interface to the Cairo 2D graphics library")
  (authors "Guillaume Cartier")
  (stage release)
  (root "src")
  (products (jazz.cairo (alias cairo)
                        (remote (mac "togethersphere.com/jazz-cairo-mac"))
                        (test jazz.cairo.test)
                        (product jazz.cairo.product)
                        (update jazz.cairo
                                jazz.cairo.product)
                        (library
                          (link-options
                            (windows (libdir "~~jazz/foreign/cairo/lib/windows")
                                     "-lcairo"
                                     "-mwindows")
                            (mac  (pkg-config "--libs" "cairo"))
                            (else (pkg-config "--libs" "cairo"))))
                        (dependencies jazz
                                      jazz.cairo.pixman
                                      jazz.cairo.png
                                      (cond
                                        ((not ios) jazz.fontconfig))
                                      jazz.foreign
                                      (cond
                                        ((not ios) jazz.freetype))
                                      jazz.platform
                                      (cond
                                        ((not ios) jazz.zlib))))
            (jazz.cairo.pixman (remote (mac "togethersphere.com/jazz-pixman-mac")))
            (jazz.cairo.png (remote (mac "togethersphere.com/jazz-png-mac"))))
  (project ".project"))
