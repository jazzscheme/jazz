(package jazz.cairo
  
  (title "Cairo")
  (description "Interface to the Cairo 2D graphics library")
  (authors "Guillaume Cartier")
  (stage release)
  (root "src")
  (products (jazz.cairo (alias cairo)
                        (test jazz.cairo.test)
                        (product jazz.cairo.product)
                        (update jazz.cairo
                                jazz.cairo.product)
                           (library
                             (link-options
                                (windows (libdir "~~jazz/foreign/cairo/lib/windows")
                                         "-lcairo"
                                         "-mwindows")
                                (mac  (pkg-config "--libs" "cairo"))
                                (else (pkg-config "--libs" "cairo"))))
                        (dependencies jazz
                                      #; ;; quick test... ios-convert
                                      jazz.fontconfig
                                      jazz.foreign
                                      #; ;; quick test... ios-convert
                                      jazz.freetype
                                      jazz.platform
                                      #; ;; quick test... ios-convert ... not ios as it is static
                                      jazz.zlib)))
  (project ".project"))
