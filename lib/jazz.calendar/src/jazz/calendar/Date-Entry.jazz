(module protected jazz.calendar.Date-Entry jazz


(import (jazz.calendar)
        (jazz.designer)
        (jazz.jml)
        (jazz.locale)
        (jazz.ui.view)
        (time))


(class Date-Entry extends String-Entry
  
  
  (form
    (<install>
      @wait (<Action-Icon> name: action  size: {Dimension 22 22} resource: {Image-Resource "PageDate"} tooltip-text: "Choisir la date" action-handler: {Event-Handler :form on-choose-date})))
  
  
  ;;;
  ;;;; Validate
  ;;;
  
  
  (method override (validate domain)
    (or (nextmethod domain)
        (let ((content (get-string-content~ (locate 'text))))
          (if (or (empty-string? content)
                  (with-exception-filter
                    (lambda (exception) #t)
                    (lambda (exception) #f)
                    (lambda () (parse-date-day content))))
              #f
            (new Property-Violation message: (new Locales english: "Date format is yyyy/mm/dd" french: "Le format de date est yyyy/mm/dd"))))))
  
  
  ;;;
  ;;;; Value
  ;;;
  
  
  (method override (get-value)
    (let ((content (get-string-content~ (locate 'text))))
      (if (or (empty-string? content) (string=? content "{}"))
          #f
        (parse-date-day content))))
  
  
  (method override (set-value value)
    (set-string-content~ (locate 'text)
      (if (not value)
          "{}"
        (present-date-day value))))
    
  
  ;;;
  ;;;; Layout
  ;;;

  
  (method override (layout)
    (let ((size (get-size)))
      @wait (set-position~ (locate 'action) (new Point (- (get-width~ size) 22) 0))))
    
  
  ;;;
  ;;;; Events
  ;;;

  
  (method (on-choose-date evt)
    (set-value (get-modal Calendar-Dialog initial-date: (get-value)))
    (set-modified? #t))))
