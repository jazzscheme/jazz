(module protected jazz.console.Console-Text-Preferences jazz


(import (jazz.editor)
        (jazz.jml)
        (jazz.text))


(class undocumented Console-Text-Preferences extends Code-Text-Preferences


  (property banner-style  initialize #f accessors generate)
  (property prompt-style  initialize #f accessors generate)
  (property entry-style   initialize #f accessors generate)
  (property input-style   initialize #f accessors generate)
  (property output-style  initialize #f accessors generate)
  (property comment-style initialize #f accessors generate)
  
  
  (form
    (<install>
      title: "Console Text"
      base-style:    {Text-Style Console-Base}
      banner-style:  {Text-Style Base Console-Banner}
      prompt-style:  {Text-Style Base Console-Prompt}
      entry-style:   {Text-Style Base Console-Bold Console-Entry}
      input-style:   {Text-Style Base Console-Bold Console-Input}
      output-style:  {Text-Style Base Console-Output}
      comment-style: {Text-Style Base Console-Comment}
      default-style: {Text-Style Entry}))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor (context: context #f))
    (new jazz.console.designer:Console-Text-Preferences-Descriptor))))
