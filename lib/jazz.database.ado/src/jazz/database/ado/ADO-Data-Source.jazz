(module protected jazz.database.ado.ADO-Data-Source jazz


(import (jazz.database)
        (jazz.database.ado)
        (jazz.designer)
        (jazz.markup)
        (jazz.schema))


(class ADO-Data-Source extends Database-Data-Source
  
  
  (property dsn initialize #f accessors generate)
  
  
  (form
    (<install> backend: adodb))
  
  
  (method meta override (external-name self . rest)
    'ado)
  
  
  ;;;
  ;;;; Backends
  ;;;
  
  
  (method override (valid-backends self)
    '(adodb))
  
  
  ;;;
  ;;;; Provider
  ;;;
  
  
  ;; need a cache!?
  (method override (get-provider self)
    (new ADO-Provider))
  
  
  ;;;
  ;;;; Inventory
  ;;;
  
  
  (method override (new-inventory self connection . rest)
    (new ADO-Inventory connection (get-connection-string self)))
  
  
  ;;;
  ;;;; Connection
  ;;;
  
  
  (method override (get-connection-string self)
    (when dsn
      (format "DSN={a};" dsn)))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor self (context: context #f))
    (new jazz.database.ado.descriptors:ADO-Data-Source-Descriptor))))
