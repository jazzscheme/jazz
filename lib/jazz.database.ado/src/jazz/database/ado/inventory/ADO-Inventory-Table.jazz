(module protected jazz.database.ado.inventory.ADO-Inventory-Table jazz


(import (jazz.database))


(class ADO-Inventory-Table extends Inventory-Table)


@convert


(class ADO-Inventory-Table extends Inventory-Table
  
  
  (slot handle)
  
  
  (method (initialize inventory parent handle)
    (nextmethod inventory parent)
    (set! self.handle handle)
    (allocated handle))
  
  
  (method (destroy)
    (com-release handle)
    (freed handle)
    (nextmethod))
  
  
  ;;;
  ;;;; Database
  ;;;
  
  
  (method (get-title)
    (get-Name handle))
  
  
  (method (get-columns)
    (with ((columns (get-Columns handle)))
      (loop (for n from 0 below (get-Count columns))
            (collect (new ADO-Inventory-Column inventory self #f (get-Item columns n))))))
  
  
  @w
  (method public virtual (get-keys)
    (with ((keys (get-Keys handle)))
      (let ((count (get-Count keys))
            (fact (new List-Factory)))
        (for-each (lambda (n)
                    (let ((key (get-Item columns n)))
                      (put fact key)))
                  (naturals 0 count))
        (get-output fact))))
  
  
  (method (get-indexes)
    (with ((indexes (get-Indexes handle)))
      (loop (for n from 0 below (get-Count indexes))
            (collect (new ADO-Inventory-Index inventory self (get-Item indexes n))))))
  
  
  (method (get-triggers)
    '())
  
  
  (method (get-constraints)
    '())))
