(library protected jazz.database.sqlserver.inventory.SQLServer-Provider jazz


(import (jazz.database)
        (jazz.library)
        (jazz.ui)
        (jazz.ui.view)
        (jazz.utilities))


(class SQLServer-Provider extends Provider
  
  
  (method (external-name)
    'sqlserver)
  
  
  ;;;
  ;;;; Datatypes
  ;;;
  
  
  @convert
  (method (get-datatype)
    SQLServer-Datatype)
  
  
  ;;;
  ;;;; Features
  ;;;
  
  
  @convert
  (method (supports-multirequests?)
    #t)
  
  
  ;;;
  ;;;; Value
  ;;;
  
  
  @convert
  (method (format-variable variable)
    (format "@{a}" variable))
  
  
  ;;;
  ;;;; Presentation
  ;;;
  
  
  (method (present)
    "SQLServer")
  
  
  ;;;
  ;;;; Servers
  ;;;
  
  
  @convert
  (method public (get-server-names)
    (with-cursor :wait
      (function ()
        (with-closed ((application (com-create SQLDMO.Application error?: #f)))
          (if (null? application)
              (begin
                (message-box "SQLServer is not installed on this machine")
                '())
            (with-closed ((name-list (essay application (ListAvailableSQLServers~ application))))
              (loop (for n from 1 to (get-Count~ name-list))
                    (collect (Item~ name-list n)))))))))
  
  
  @convert
  (method public (server-names-for-combo)
    (let ((names (get-server-names)))
      (cons (list "(local)") (map list (remove "(local)" names test: equal?)))))
  
  
  @convert
  (method public (server-names-choices-updater combo)
    (set-choices~ combo (server-names-for-combo))
    #t)
  
  
  ;;;
  ;;;; Browser
  ;;;
  
  
  @convert
  (method (browser-class)
    SQLServer-Widget)
  
  
  ;;;
  ;;;; Updater
  ;;;
  
  
  @convert
  (method (new-updater connection)
    (new SQLServer-Inventory-Updater connection))))
