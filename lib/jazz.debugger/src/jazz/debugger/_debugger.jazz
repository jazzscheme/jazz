(definition public (get-restarts-view)
  (get-guest~ (singleton-docked Restarts-View #f)))


(definition public (get-exception-view)
  (get-guest~ (singleton-docked Exception-View #f)))


(definition public (get-variables-view)
  (get-guest~ (singleton-docked Variables-View #f))))
