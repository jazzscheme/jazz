(module protected jazz.debugger.debugger.Frame-Indicator jazz


(import (jazz.io)
        (jazz.runtime)
        (jazz.system))


(class Frame-Indicator extends Object
  
  
  (slot color)
  (slot location initialize {})
  
  
  (method override (initialize (color: color {}))
    (nextmethod)
    (set! color~self color))
  
  
  ;;;
  ;;;; Edition
  ;;;


  (method public (edit loc (activate-focus?: activate-focus? #f))
    (define (install-indicator loc)
      (receive (frame text range) (find-location loc)
        (fill~ text color (get-start~ range))
        (ensure-cell-displayed~ text (get-start~ range))
        (set! location loc)
        (reset-tooltip~ text)
        (focus-host~ frame)))
    
    (define (uninstall-indicator loc)
      (receive (frame text range) (find-location loc)
        (unfill~ text (get-start~ range))
        (reset-tooltip~ text)))
    
    (define (uninstall-active-indicator)
      (when location
        (uninstall-indicator location)
        (set! location {})))
    
    (define (find-location loc)
      (bind (container line col) loc
        (let ((file (if (symbol? container)
                        (find-unit-source container)
                      (anchorize~ (new File (tokenise-filename container)))))
              (start (new Cell line col))
              (end (new Cell line (+ col 1))))
          (let ((frame (edit-document~ (get-application) file activate-focus?: #f visible?: #f))
                (range (new Range$Cell$ start end)))
            (values frame (get-guest~ frame) range)))))
    
    (uninstall-active-indicator)
    (when loc
      (install-indicator loc)))))
