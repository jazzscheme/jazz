(library protected jazz.debugger.debugger.Variables-View jazz


(import (jazz.debugger)
        (jazz.editor.jazz)
        (jazz.editor.jazz.inspector)
        (jazz.jml)
        (jazz.library)
        (jazz.system)
        (jazz.ui))


(class Variables-View extends Layout-View

  
  (property process            initialize {} getter get-process            setter set-process)
  (property continuation-frame initialize {} getter get-continuation-frame setter set-continuation-frame)


  (form
    (<install>                                       layout-type: fill
      (<Scroller-View>               name: scroller  vscroll?: #t hscroll?: #t flat?: #t
        (<!>                         name: content   layout-type: fill
          (<Tree-Header>                             flat?: #t
            (<!>                     name: content
              (<Variables-Inspector> name: variables multiple-selection?: #f selection-mode: row
                (<!>                 name: name      width: 130)
                (<!>                 name: value     width: 303))))))))
  
  
  (method meta override (external-name . rest)
    'variables-view)

  
  ;;;
  ;;;; Host
  ;;;
  
  
  (method meta override (host-icon)
    {Bitmap-Resource "Spy"})
  
  
  (method meta override (host-title)
    "Variables")
  
  
  ;;;
  ;;;; Docked
  ;;;
  
  
  (method override (focus-default)
    (let ((tree (locate 'variables)))
      (acquire-focus~ tree)))

  
  ;;;
  ;;;; Access
  ;;;


  (method public (get-process)
    (get-process~ (locate 'variables)))


  (method public (set-process process)
    (set-process~ (locate 'variables) process))


  (method public (get-continuation-frame)
    continuation-frame)


  (method public (set-continuation-frame frm)
    (set! continuation-frame frm)
    (set-client~ (locate 'variables) (essay continuation-frame (cons continuation-frame :frame))))
  
  
  (method public (frame-changed new-frame)
    (set-process (get-process~ (get-debugger-manager)))
    (set-continuation-frame new-frame))

  
  ;;;
  ;;;; Events
  ;;;


  (method override (resize dh dv)
    (nextmethod dh dv)
    (size-figure~ (locate 'scroller) dh dv))
  
  
  (method package (on-frame-change evt)
    (let ((process (get-property~ evt process:))
          (frame (get-property~ evt frame:)))
      (set-process process)
      (set-continuation-frame frame)
      @convert
      (typecase frame
        ((Frame-Snapshot)
         (set-process {})
         (set-continuation-frame frame))
        (else
         (set-process {})
         (set-continuation-frame {}))))))


;;;
;;;; Inspector
;;;


(class Variables-Inspector extends Inspector
  
  
  (method override (inspect data kind)
    (if (is? data Debugged-Frame)
        (get-variables~ data)
      (case kind
        ((frame:) (inspect-frame data))
        (else (nextmethod data kind)))))
  
  
  (method (inspect-frame frame)
    (typecase frame
      ((Frame-Snapshot)
       (let ((parameters (get-parameters~ frame)))
         (map (function (parameter rank)
                (if (pair? parameter)
                    (bind (name value) parameter
                      (list name 0 value #f {}))
                  (list rank 0 parameter #f {})))
              parameters
              (naturals 0 (length parameters)))))))))
