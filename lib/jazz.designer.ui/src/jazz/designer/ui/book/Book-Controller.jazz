(module protected jazz.designer.ui.book.Book-Controller jazz


(import (jazz.designer)
        (jazz.designer.ui)
        (jazz.document))


(class undocumented Book-Controller extends Document-Controller
  
  
  (method override (get-modified? self)
    (continuation-capture
      (lambda (return)
        (for-each-section document
          (lambda (name section)
            (when (get-modified? (get-editor section))
              (continuation-return return #t))))
        #f)))
  
  
  (method override (set-modified? self state)
    (for-each-section document
      (lambda (name section)
        (set-modified? (get-editor section) state)))
    (update-status self))))
