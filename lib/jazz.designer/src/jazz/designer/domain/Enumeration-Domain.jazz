(module protected jazz.designer.domain.Enumeration-Domain jazz


(import (jazz.designer)
        (jazz.jml)
        (jazz.locale))


(class Enumeration-Domain extends Domain
  
  
  (form
    (<install> nullable?: #t))
  
  
  (property choices                     initialize '() accessors generate)
  (property choices-handler             initialize #f  accessors generate)
  (property condensed?                  initialize #f  accessors generate)
  (property strict?                     initialize #f  accessors generate)
  (property limit                       initialize #f  accessors generate)
    
  
  ;;;
  ;;;; Validation
  ;;;
  
  
  (method override (validate-value value (validation-context #f))
    (or (nextmethod value validation-context)
        (boolean choices-handler)
        (let ((values (map car choices)))
          (if strict?
              (unless (member? value values)
                (add-violation "must be one of: {a}" (join (map ->string (if nullable? (cons #f values) values)) ", ")))
            (when (and limit (< limit (string-length (->string value))))
              (add-violation "{a}" (contextual-locales {Locales english: "This field can't contain more than {limit} characters" french: "Ce champ ne peut contenir plus de {limit} caractÃ¨res"} (local-context limit))))))))
  
  
  ;;;
  ;;;; Presentation
  ;;;
  
  
  (method override (present-value value)
    (let ((pair (assq value choices)))
      (if pair
          (cadr pair)
        (->string value))))
  
  
  ;;;
  ;;;; Entry
  ;;;
  
  
  (method protected (collect-choices client)
    (if choices-handler
        (let* ((choices ((resolve-reference~ choices-handler) client))
               (sorted-choices (sort string<=? (if nullable? (cons #f choices) choices) key: (compose ->string localize))))
          (zip sorted-choices
               (map (lambda (value)
                      (if value (->string value) (localize (get-nil-presentation))))
                    sorted-choices)))
      (let ((choices (map (lambda (pair)
                            (list (car pair) (localize (cadr pair))))
                          choices)))
        (if nullable?
            (cons (list #f (localize (get-nil-presentation))) choices)
          choices))))
    
  
  (method override (setup-entry view client)
    (let ((entry (new Enumeration-Entry parent: view size: (get-size~ view) domain: self)))
      (let ((combo (locate~ entry 'combo)))
        (set-condensed?~ combo condensed?)
        (set-choices~ combo (collect-choices client)))
      entry))))
