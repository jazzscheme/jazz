(module protected jazz.designer.domain.Name-Domain jazz


(import (jazz.designer)
        (jazz.library))


(class Name-Domain extends Info-Domain
  
  
  (property limit      initialize #f accessors generate)
  
  
  ;;;
  ;;;; Validation
  ;;;
  
  
  (method override (validate-data value (validation-context: validation-context #f))
    (or (nextmethod value validation-context: validation-context)
        (cond ((not (or (symbol? value)
                        (string? value)))
               (add-violation "must be a symbol or a string"))
              ((and limit
                    (< limit (string-length (->string value))))
               (add-violation "must contain at most {a} characters" limit)))))
    
  
  ;;;
  ;;;; Presentation
  ;;;
  
  
  (method override (present value)
    (if (not value)
        "{}"
      (->string value :reader)))
  
  
  ;;;
  ;;;; Parse
  ;;;

  
  (method override (parse text)
    (or (read-string-safe text) text))
  
  
  ;;;
  ;;;; Entry
  ;;;
  
  
  (method override (setup-entry view client)
    (new Text-Entry parent: view size: (get-size~ view) domain: self))))
