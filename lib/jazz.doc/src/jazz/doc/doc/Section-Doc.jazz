(module protected jazz.doc.doc.Section-Doc jazz


(import (jazz.designer)
        (jazz.doc)
        (jazz.io)
        (jazz.jml)
        (jazz.library))


(class Section-Doc extends Doc
  
  
  (property sort? initialize #f accessors explicit)
  
  
  (slot catalog)


  ;;;
  ;;;; Access
  ;;;


  (method override (get-catalog)
    catalog)
  
  
  (method override (set-catalog cat)
    (set! catalog cat)
    (for-each (lambda (child)
                (set-catalog~ child cat))
              children))


  (method public (get-sort?)
    sort?)


  (method public (set-sort? value)
    (when (neq? value sort?)
      (set! sort? value)
      (for-each (lambda (designer)
                  (process-refresh~ designer self 'descendants))
                designers)))


  ;;;
  ;;;; HTML
  ;;;
  
  
  (method (html-output-file)
    (new File (list 'Jazz "Documentation" "Jazz" "HTML" (format "{a}.html" name))))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor)
    (new Section-Doc-Descriptor)))


;;;
;;;; Design
;;;


(submodule design


(import (jazz.designer))


(class Section-Doc-Descriptor extends Doc-Descriptor
  
  
  (form
    (<install>                 image: {Image-Resource "OpenedFolder"}
      (<properties~>
        (<Property-Descriptor> name: sort? title: "Sort"
          (<Boolean-Domain>    name: domain)))))
  
  
  (method override (component-sort-components? component)
    (get-sort?~ component)))))
