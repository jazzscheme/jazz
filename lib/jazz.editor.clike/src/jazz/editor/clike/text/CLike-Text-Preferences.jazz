(module protected jazz.editor.clike.text.CLike-Text-Preferences jazz


(import (jazz.designer)
        (jazz.jml)
        (jazz.ui))


(class CLike-Text-Preferences extends Code-Text-Preferences


  (property title-style            initialize #f  accessors generate)
  (property definition-style       initialize #f  accessors generate)
  (property line-comment-style     initialize #f  accessors generate)
  (property balanced-comment-style initialize #f  accessors generate)
  (property keyword-style          initialize #f  accessors generate)
  (property profile-macro-style    initialize #f  accessors generate)
  (property profile-keyword-style  initialize #f  accessors generate)
  (property profile-type-style     initialize #f  accessors generate)
  (property macros                 initialize '() accessors generate)
  (property keywords               initialize '() accessors generate)
  (property types                  initialize '() accessors generate)
  (property completions            initialize '() accessors generate)
  
  
  (form
    (<install> title: "C Text"))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor)
    (new CLike-Text-Preferences-Descriptor)))


;;;
;;;; Design
;;;


(submodule design


(import (jazz.designer))


(class CLike-Text-Preferences-Descriptor extends Document-Preferences-Descriptor
  
  
  (form
    (<install>
      (<properties~>                categorized: (macros keywords types completions title-style definition-style line-comment-style balanced-comment-style keyword-style profile-keyword-style profile-macro-style profile-type-style)
        (<Property-Descriptor>      name: title-style)
        (<Property-Descriptor>      name: definition-style)
        (<Property-Descriptor>      name: line-comment-style)
        (<Property-Descriptor>      name: balanced-comment-style)
        (<Property-Descriptor>      name: keyword-style)
        (<Property-Descriptor>      name: profile-macro-style)
        (<Property-Descriptor>      name: profile-keyword-style)
        (<Property-Descriptor>      name: profile-type-style)
        (<Property-Descriptor>      name: macros)
        (<Property-Descriptor>      name: keywords)
        (<Property-Descriptor>      name: types)
        (<Property-Descriptor>      name: completions
          (<Completions-Domain>     name: domain))))))))
