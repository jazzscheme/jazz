(module protected jazz.editor.clike.text.CLike-Text-Preferences jazz


(import (jazz.designer)
        (jazz.jml)
        (jazz.ui))


(class CLike-Text-Preferences extends Code-Text-Preferences


  (property title-style            initialize {}  accessors generate)
  (property definition-style       initialize {}  accessors generate)
  (property line-comment-style     initialize {}  accessors generate)
  (property balanced-comment-style initialize {}  accessors generate)
  (property keyword-style          initialize {}  accessors generate)
  (property profile-macro-style    initialize {}  accessors generate)
  (property profile-keyword-style  initialize {}  accessors generate)
  (property profile-type-style     initialize {}  accessors generate)
  (property macros                 initialize '() accessors generate)
  (property keywords               initialize '() accessors generate)
  (property types                  initialize '() accessors generate)
  (property completions            initialize '() accessors generate)
  
  
  (form
    (<install> title: "C Text"))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor)
    (new CLike-Text-Preferences-Descriptor)))


;;;
;;;; Design
;;;


(submodule design


(import (jazz.designer))


(class CLike-Text-Preferences-Descriptor extends Document-Preferences-Descriptor


  ;;;
  ;;;; Designer
  ;;;
  
  
  (method override (component-get-categorized-properties component)
    '(macros keywords types completions
      title-style definition-style line-comment-style balanced-comment-style keyword-style profile-keyword-style profile-macro-style profile-type-style))
  
  
  (method override (component-get-row-instance component property)
    (case (field-name property)
      @wait
      ((title-style definition-style line-comment-style balanced-comment-style keyword-style profile-keyword-style profile-macro-style profile-type-style) (new Style-Row))
      ((macros keywords types) (new Macro/Keyword/Type-List-Row))
      ((completions) (new Completion-List-Row))
      (else (nextmethod component property)))))


;;;
;;;; Macro/Keyword/Type-List-Row
;;;


(class Macro/Keyword/Type-List-Row extends List-Row
  
  
  (method override (get-subrow-class)
    Macro/Keyword/Type-Row))


;;;
;;;; Macro/Keyword/Type-Row
;;;


(class Macro/Keyword/Type-Row extends Value-Row)))
