(module protected jazz.editor.clike.text.CLike-Text-View jazz


(import (jazz.editor.c)
        (jazz.editor.clike)
        (jazz.system)
        (jazz.ui))


(class CLike-Text-View extends Code-Text-View
  
  
  (method override (install rest)
    (nextmethod rest)
    (let ((pref (preferences)))
      (add-style 'Title            (get-title-style~ pref))
      (add-style 'Definition       (get-definition-style~ pref))
      (add-style 'Line-Comment     (get-line-comment-style~ pref))
      (add-style 'Balanced-Comment (get-balanced-comment-style~ pref))
      (add-style 'Keyword          (get-keyword-style~ pref))
      (add-style 'Profile-Macro    (get-profile-macro-style~ pref))
      (add-style 'Profile-Keyword  (get-profile-keyword-style~ pref))
      (add-style 'Profile-Type     (get-profile-type-style~ pref))))
  
  
  (method override (new-syntax)
    (new CLike-Syntax model))

  
  ;;;
  ;;;; Tabulation
  ;;;


  (method override (return-press key)
    (nextmethod key)
    (tabulate))

  
  ;;;
  ;;;; Mouse Copy
  ;;;

  
  (method override (mouse-insert copy)
    (let ((start (get-start))
          (end (get-end)))
      @implement-with-c-logic-ie-capitalized-variables
      (when (/= start (text-beginning))
        (let ((sc (get-char (previous-cell start))))
          (when (and (text-constituent?~ syntax (element copy 0)) (text-constituent?~ syntax sc) (not (memq? sc '(#\minus #\colon))))
            (set! copy (concatenate " " copy)))))
      @implement-with-c-logic-ie-capitalized-variables
      (when (and (/= end (text-ending)) (text-constituent?~ syntax (last copy)) (text-constituent?~ syntax (get-char end)))
        (set! copy (concatenate copy " ")))
      (insert-string copy)))

  
  ;;;
  ;;;; Chapters
  ;;;
  
  
  (constant headers
    (list
      (concatenate "///" (string #\tab))
      (concatenate "///" (string #\space))))
  
  
  (method override (get-headers)
    headers)))
