(library protected jazz.editor.jazz.spy.Spy-View jazz


(import (jazz.jml)
        (jazz.library)
        (jazz.ui))


(class Spy-View extends View


  (property clients initialize '() getter get-clients setter set-clients)


  (slot active?          initialize #f)
  (slot slowdown?        initialize #f)
  (slot slowdown-quantum initialize 1000)
  (slot category         initialize 'all)
  (slot old-consumer)


  (form
    (<install>                                   size: {Dimension 736 339} location: east
      (<Radio-Tool>          name: all           position: {Point 4 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "All" image-name: {Bitmap-Resource "MsgGeneral"} action-handler: {Event-Handler parent: on-category} portfolio: :icons selected?: #t)
      (<Radio-Tool>          name: paint         position: {Point 28 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "Paint" image-name: {Bitmap-Resource "MsgPaint"} action-handler: {Event-Handler parent: on-category} portfolio: :icons)
      (<Radio-Tool>          name: mouse         position: {Point 52 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "Mouse" image-name: {Bitmap-Resource "MsgMouse"} action-handler: {Event-Handler parent: on-category} portfolio: :icons)
      (<Radio-Tool>          name: keyboard      position: {Point 76 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "Keyboard" image-name: {Bitmap-Resource "MsgKeyboard"} action-handler: {Event-Handler parent: on-category} portfolio: :icons)
      (<Push-Tool>           name: spy           position: {Point 156 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "Spy" image-name: {Bitmap-Resource "Window"} action-handler: {Event-Handler parent: on-spy} portfolio: :icons)
      (<Push-Tool>           name: spy-family    position: {Point 180 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "Spy Family" image-name: {Bitmap-Resource "Layout"} action-handler: {Event-Handler parent: on-spy-family} portfolio: :icons)
      (<Push-Tool>           name: clear         position: {Point 605 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "Clear" image-name: {Bitmap-Resource "Clear"} portfolio: :icons action-handler: {Event-Handler :form on-clear})
      (<Toggle-Tool>         name: slowdown      position: {Point 686 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "Slowdown" image-name: {Bitmap-Resource "SpySlowdown"} portfolio: :icons action-handler: {Event-Handler :form on-slowdown})
      (<Toggle-Tool>         name: on/off        position: {Point 710 6} size: {Dimension 22 22} tooltip?: #t tooltip-text: "On/Off" image-name: {Bitmap-Resource "Spy"} portfolio: :icons action-handler: {Event-Handler :form on-on/off})
      (<Border-View>         name: tree-border   position: {Point 0 33} size: {Dimension 736 306} border-type: edge
        (<Scroller-View>     name: tree-scroller vscroll?: #t
          (<!>               name: content       layout-type: fill
            (<Tree-Header>   name: tree-header
              (<!>           name: content
                (<Tree-View> name: tree          selection-mode: row portfolio: :icons))))))))

  
  ;;;
  ;;;; Access
  ;;;
  
  
  (method public (get-tree)
    (locate 'tree))

  
  ;;;
  ;;;; Clients
  ;;;


  (method public (get-clients)
    clients)


  (method public (set-clients list)
    (when active?
      (for-each unspy clients))
    (set! clients list)
    (activate))


  (method (activate)
    (set! active? #t)
    (for-each spy clients)
    (set-selected?~ (locate 'on/off) #t))

  
  ;;;
  ;;;; Events
  ;;;


  (method override (destroy)
    (set-clients '())
    (nextmethod))


  (method override (resize dh dv)
    (nextmethod dh dv)
    (move-figure~ (locate 'clear) dh 0)
    (move-figure~ (locate 'slowdown) dh 0)
    (move-figure~ (locate 'on/off) dh 0)
    (size-figure~ (locate 'tree-border) dh dv))


  (method (on-category evt)
    (set! category (get-name~ (get-sender~ evt))))
  
  
  (method (on-spy evt)
    (unimplemented)
    @convert
    (pick-figure
      (lambda (window position view pos)
        (let* ((domain (spy-domain))
               (figure (case domain ((windows) window) ((views) view))))
          (set-clients (list figure))))))
  
  
  (method (on-spy-family evt)
    (unimplemented)
    @convert
    (pick-figure
      (lambda (window position view pos)
        (let* ((domain (spy-domain))
               (figure (case domain ((windows) window) ((views) view))))
          (set-clients (collect-family~ figure))))))
  
  
  (method (pick-figure action)
    (unimplemented)
    @convert
    (let ((domain (spy-domain)))
      (pick-figure
       exclude: (list (get-player))
       click: action
       highlight: #t
       highlight-root-only?: (neq? domain 'views)
       obscure-unhighlighted?: #t
       report-figure?: #f
       tooltips?: #f)))
  
  
  (method (on-clear evt)
    (remove-every-row~ (get-tree)))


  (method (on-slowdown evt)
    (set! slowdown? (not slowdown?)))


  (method (on-on/off evt)
    (set! active? (not active?))
    (if active?
        (for-each spy clients)
      (for-each unspy clients)))

  
  ;;;
  ;;;; Spying
  ;;;
  
  
  (method protected virtual (spy-domain)
    )


  (method protected virtual (spy client)
    )


  (method protected virtual (unspy client)
    )))
