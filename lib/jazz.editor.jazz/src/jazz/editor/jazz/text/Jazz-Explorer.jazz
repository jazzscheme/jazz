(class Jazz-Explorer extends Scheme-Explorer
  
  
  (method (get-modifiers)
    '(dialect meta private package protected public primitive final virtual chained abstract inline synchronized unimplemented undocumented deprecated post exec call value))
  
  
  (method (get-keywords)
    '(metaclass extends implements has on library module dialect imports exports includes attributes))
  
  
