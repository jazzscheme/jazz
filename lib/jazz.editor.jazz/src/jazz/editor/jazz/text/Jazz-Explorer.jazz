  (method (walk-declare context symbol declaration keyword expression doc walk-expressions?)
    (keyword context start end))
      
  
  (method (walk-proclaim context symbol declaration keyword expression doc walk-expressions?)
    (keyword context start end))

  
  (method (walk-properties context symbol declaration keyword expression doc walk-expressions?)
    (keyword context start end)
    (when walk-expressions?
      (walk-expressions context expression)))
  
  
  (method (walk-attributes context symbol declaration keyword expression doc walk-expressions?)
