(module jazz.editor.lisp jazz


(export (jazz.editor.lisp.autoload)
        (jazz.editor.lisp.syntax (phase syntax)))


;;;
;;;; Lisp Form
;;;


(definition *lisp-forms*
  (make-table test: eq?))


(definition public (get-lisp-form name)
  (table-ref *lisp-forms* name {}))


(definition public (register-lisp-form form)
  (table-set! *lisp-forms* (get-name~ form) form))


(class Lisp-Form extends Object
  
  
  (slot name         getter generate)
  (slot dialect      getter generate)
  (slot namespace?   getter generate)
  (slot declaration? getter generate)
  (slot inner?       getter generate)
  (slot modifiers    getter generate)
  (slot keywords     getter generate)
  (slot tabulate     getter generate)
  (slot walk         getter generate)
  
  
  (method override (initialize name
                      (dialect: dialect 'jazz)
                      (namespace?: namespace? #f)
                      (declaration?: declaration? #f)
                      (inner?: inner? #f)
                      (modifiers: modifiers '())
                      (keywords: keywords '())
                      (tabulate: tabulate {})
                      (walk: walk {}))
    (nextmethod)
    (set! name~self name)
    (set! dialect~self dialect)
    (set! namespace?~self namespace?)
    (set! declaration?~self declaration?)
    (set! inner?~self inner?)
    (set! modifiers~self modifiers)
    (set! keywords~self keywords)
    (set! tabulate~self tabulate)
    (set! walk~self walk)))


;;;
;;;; Utility
;;;


(definition public (lisp-form-namespace? symbol)
  (let ((lisp-form (get-lisp-form symbol)))
    (and lisp-form (get-namespace?~ lisp-form))))


(definition public (lisp-form-declaration? symbol)
  (let ((lisp-form (get-lisp-form symbol)))
    (and lisp-form (get-declaration?~ lisp-form))))


(definition public (lisp-form-inner? symbol)
  (let ((lisp-form (get-lisp-form symbol)))
    (and lisp-form (get-inner?~ lisp-form))))


(definition public (lisp-form-modifiers symbol)
  (let ((lisp-form (get-lisp-form symbol)))
    (and lisp-form (get-modifiers~ lisp-form))))


(definition public (lisp-form-keywords symbol)
  (let ((lisp-form (get-lisp-form symbol)))
    (and lisp-form (get-keywords~ lisp-form))))


(definition public (lisp-form-tabulate symbol)
  (let ((lisp-form (get-lisp-form symbol)))
    (and lisp-form (get-tabulate~ lisp-form))))


(definition public (lisp-form-walk symbol)
  (let ((lisp-form (get-lisp-form symbol)))
    (and lisp-form (get-walk~ lisp-form)))))
