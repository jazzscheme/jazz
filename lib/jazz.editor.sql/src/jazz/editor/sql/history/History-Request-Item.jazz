(module protected jazz.editor.sql.history.History-Request-Item jazz


(import (jazz.console)
        (jazz.editor.sql)
        (jazz.editor.sql.view)
        (jazz.history)
        (jazz.text))


(class History-Request-Item extends History-Item
  
  
  (slot request)
  
  
  (method override (initialize self request)
    (nextmethod self)
    (set! self.request request))

  
  (method override (open-item self)
    (if (null? request)
        (bell)
      (let ((text (get-sql-console-text)))
        (fresh-prompt text)
        (insert-line text request)
        (evaluate text request #t))))
  
  
  (method override (present self)
    request)))
