(module protected jazz.favorite.Favorites-Tree jazz


(import (jazz.designer.ui)
        (jazz.favorite)
        (jazz.jml))


(class Favorites-Tree extends Descendants-Tree
  
  
  (form
    (<install> portfolio: :images draggable?: #t reorderable?: #t auto-expand/collapse?: #t multiple-selection?: #f show-traits?: #f))
  
  
  (method override (context-menu evt)
    (let ((pos (get-position~ evt))
          (guest (get-guest~ (get-host))))
      (when (is? guest Favorites-Manager)
        (with-context-click pos
          (lambda ()
            (track-popup-menu (new-favorites-menu~ guest) pos))))))
  
  
  (method override (update-selection expand-state selected-components)
    )
  
  
  (method override (row-state component update? level)
    (if update?
        (if (< level 1) 'expanded 'collapsed)
      'collapsed))
  
  
  (method override (double-click evt)
    (nextmethod evt)
    (launch-selection~ (get-guest~ (get-host))))


  (method override (return-press evt)
    (case (get-key~ evt)
      ((#\return) (launch-selection~ (get-guest~ (get-host))))
      (else (nextmethod evt))))))
