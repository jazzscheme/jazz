(data jazz.ide.data.project


(import (jazz.editor.jazz))


(form
  (<Project>                 name: jazz.figure description-file: {File :context ".package"}
    (<Project-Directory>                       directory: {Directory :context "src"}
      (<Project-Directory>                     directory: {Directory :context "src" "jazz"}
        (<Project-Directory>                   directory: {Directory :context "src" "jazz" "figure"}
          (<Jazz-File>       name: _figure     source: {File :context "src" "jazz" "figure" "_figure.jazz"})
          (<Jazz-File>       name: preferences source: {File :context "src" "jazz" "figure" "preferences.jazz"})
          (<Jazz-File>       name: designer    source: {File :context "src" "jazz" "figure" "designer.jazz"})))))))
