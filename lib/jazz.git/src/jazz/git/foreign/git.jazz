;;;
;;;; Testing
;;;
(define (test-libgit) 
  (lambda ()
    @wait(let ((repo '()))
      (if (= (git_repository_open repo UTF-8-string) GIT_SUCCESS)
          (begin 
            (display 'Connected)
            (git_repository_free repo))
        (display 'Error))
      ))))