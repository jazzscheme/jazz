;;;
;;;; Structures
;;;            


(c-structure git_oid
  (uchar id GIT_OID_RAWSZ)) 


(c-structure git_index_time
  (time_t seconds)
  (time_t nanoseconds))


(c-structure git_index_entry
  (git_index_time ctime)
  (git_index_time mtime)
  (uint dev)
  (uint ino)
  (uint mode)
  (uint uid)
  (uint gid)
  (size_t file_size)
  (git_oid oid)
  (ushort flags)
  (ushort flags_extended)
  (UTF-8-string path))


(c-structure git_rawobj
  (void* data)
  (size_t len)
  (git_otype type))


