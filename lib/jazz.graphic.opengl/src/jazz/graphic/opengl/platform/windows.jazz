(library protected jazz.graphic.opengl.platform.windows jazz


(export (jazz.graphic.opengl.platform.WinOpenGL))

(import (jazz.graphic.opengl.autoload)
        (jazz.graphic.opengl.foreign.gl)
        (jazz.graphic.opengl.foreign.glu)
        (jazz.graphic.opengl.platform.WinOpenGL)
        (jazz.platform.windows)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.window)
        (jazz.utilities))


(definition OPENGL_CLASS_ATOM
  #f)


(definition (register-window-class)
  (let ((instance (current-instance))
        (background (class-background))
        (wc (WNDCLASSEX-make)))
    (WNDCLASSEX-cbSize-set! wc         (WNDCLASSEX-sizeof))
    (WNDCLASSEX-style-set! wc          (bitwise-ior CS_HREDRAW CS_VREDRAW CS_OWNDC))
    (WNDCLASSEX-lpfnWndProc-set! wc    call-process-hwnd-message)
    (WNDCLASSEX-cbClsExtra-set! wc     0)
    (WNDCLASSEX-cbWndExtra-set! wc     0)
    (WNDCLASSEX-hInstance-set! wc      instance)
    (WNDCLASSEX-hIcon-set! wc          (load-product-icon 32 32))
    (WNDCLASSEX-hCursor-set! wc        NULL)
    (WNDCLASSEX-hbrBackground-set! wc  NULL)
    (WNDCLASSEX-lpszMenuName-set! wc   NULL)
    (WNDCLASSEX-lpszClassName-set! wc  "JOpenGLWindow")
    (WNDCLASSEX-hIconSm-set! wc        (load-product-icon 16 16))
    (set! OPENGL_CLASS_ATOM (RegisterClassEx wc))))


(register-window-class)


(specific (window-class (<OpenGL-Window> window))
  OPENGL_CLASS_ATOM)


(specific (window-style (<OpenGL-Window> window) rest)
  (if (get-fullscreen?~ window)
      WS_POPUP
    (bitwise-ior WS_CLIPSIBLINGS
                 WS_CLIPCHILDREN
                 WS_POPUP
                 WS_OVERLAPPEDWINDOW
                 WS_MINIMIZEBOX
                 WS_SYSMENU)))


(specific (window-ex-style (<OpenGL-Window> window) rest)
  WS_EX_APPWINDOW)


(specific (create-handle (<OpenGL-Window> window) rest)
  (CreateWindowEx
    (window-ex-style window rest)
    CLASS_ATOM
    NULL
    (window-style window rest)
    0 0 1280 1024
    (window-parent window)
    NULL
    (current-instance)
    NULL))


(definition (swap-buffers window)
  (SwapBuffers (get-device~ window)))


(definition (make-render-current window render)
  (wglMakeCurrent (get-device~ window) render))


(definition (new-opengl-window (class: class {}) (width: width {}) (height: height {}) (fullscreen?: fullscreen? #f))
  (let ((class (either class OpenGL-Window))
        (width (either width 640))
        (height (either height 480)))
    (let ((window (new (either class OpenGL-Window) visible?: #f))
          (pfd (PIXELFORMATDESCRIPTOR-make)))
      (PIXELFORMATDESCRIPTOR-nSize-set! pfd (PIXELFORMATDESCRIPTOR-sizeof))
      (PIXELFORMATDESCRIPTOR-nVersion-set! pfd 1)
      (PIXELFORMATDESCRIPTOR-dwFlags-set! pfd (bitwise-ior PFD_DRAW_TO_WINDOW PFD_SUPPORT_OPENGL PFD_DOUBLEBUFFER))
      (PIXELFORMATDESCRIPTOR-iPixelType-set! pfd PFD_TYPE_RGBA)
      (PIXELFORMATDESCRIPTOR-cColorBits-set! pfd 32)
      (PIXELFORMATDESCRIPTOR-cRedBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cRedShift-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cGreenBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cGreenShift-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cBlueBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cBlueShift-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAlphaBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAlphaShift-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAccumBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAccumRedBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAccumGreenBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAccumBlueBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAccumAlphaBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cDepthBits-set! pfd 32)
      (PIXELFORMATDESCRIPTOR-cStencilBits-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-cAuxBuffers-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-iLayerType-set! pfd PFD_MAIN_PLANE)
      (PIXELFORMATDESCRIPTOR-bReserved-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-dwLayerMask-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-dwVisibleMask-set! pfd 0)
      (PIXELFORMATDESCRIPTOR-dwDamageMask-set! pfd 0)
      (let ((hdc (GetDC (get-handle~ window))))
        (let ((pixel-format (ChoosePixelFormat hdc pfd)))
          (SetPixelFormat hdc pixel-format pfd)
          (let ((hrc (wglCreateContext hdc)))
            (set-device~ window hdc)
            (set-render~ window hrc)
            (wglMakeCurrent hdc hrc)
            (set-title~ window "OpenGL")
            (unless (get-fullscreen?~ window)
              (set-position~ window {Point 50 50})
              (set-size~ window (new Dimension width height)))
            (initialize-opengl~ window)
            (resize-scene~ window width height)
            (SetTimer (get-handle~ window) 0 10 NULL)
            (set-visible?~ window #t)
            window))))))


(definition (set-fullscreen-mode)
  (let ((width 1280)
        (height 1024)
        (bits 32))
    (let ((devmode (DEVMODE-make)))
      (DEVMODE-dmSize-set! devmode (DEVMODE-sizeof))
      (DEVMODE-dmPelsWidth-set! devmode width)
      (DEVMODE-dmPelsHeight-set! devmode height)
      (DEVMODE-dmBitsPerPel-set! devmode bits)
      (DEVMODE-dmFields-set! devmode (bitwise-ior DM_BITSPERPEL DM_PELSWIDTH DM_PELSHEIGHT))
      (ChangeDisplaySettings devmode CDS_FULLSCREEN))))


(definition (reset-fullscreen-mode)
  (ChangeDisplaySettings NULL 0)))
