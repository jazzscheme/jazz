(module protected jazz.graphic.font.Concrete-Font jazz


(import (jazz.cairo)
        (jazz.graphic)
        (jazz.system))


(class Concrete-Font extends Object
  
  
  (slot font        getter generate)
  (slot local?      getter generate)
  (slot handle      getter generate)
  (slot font-face   getter generate)
  (slot scaled-font getter generate)
  (slot metrics     initialize #f)
  (slot all-widths  initialize #f)
  (slot glyph-cache initialize #f)
  
  
  (method override (initialize font)
    (define (create-cairo-scaled-font font-face point-size bold? antialias subpixel hint-style hint-metrics)
      (define (cairo-antialias antialias)
        (case antialias
          ((default) CAIRO_ANTIALIAS_DEFAULT)
          ((none) CAIRO_ANTIALIAS_NONE)
          ((gray) CAIRO_ANTIALIAS_GRAY)
          ((subpixel) CAIRO_ANTIALIAS_SUBPIXEL)))
      
      (define (cairo-subpixel subpixel)
        (case subpixel
          ((default) CAIRO_SUBPIXEL_ORDER_DEFAULT)
          ((rgb) CAIRO_SUBPIXEL_ORDER_RGB)
          ((bgr) CAIRO_SUBPIXEL_ORDER_BGR)
          ((vrgb) CAIRO_SUBPIXEL_ORDER_VRGB)
          ((vbgr) CAIRO_SUBPIXEL_ORDER_VBGR)))
      
      (define (cairo-hint-style style)
        (case style
          ((default) CAIRO_HINT_STYLE_DEFAULT)
          ((none) CAIRO_HINT_STYLE_NONE)
          ((slight) CAIRO_HINT_STYLE_SLIGHT)
          ((medium) CAIRO_HINT_STYLE_MEDIUM)
          ((full) CAIRO_HINT_STYLE_FULL)))
      
      (define (cairo-hint-metrics metrics)
        (case metrics
          ((default) CAIRO_HINT_METRICS_DEFAULT)
          ((off) CAIRO_HINT_METRICS_OFF)
          ((on) CAIRO_HINT_METRICS_ON)))
      
      (let ((height (and point-size (calculate-height point-size)))
            (matrix (cairo_matrix_t-make))
            (ctm (cairo_matrix_t-make))
            (options (cairo_font_options_create)))
        (cairo_font_options_set_antialias options (cairo-antialias (or antialias (find-setting 'cairo.antialias (default-antialias)))))
        (cairo_font_options_set_subpixel_order options (cairo-subpixel (or subpixel (find-setting 'cairo.subpixel (default-subpixel)))))
        (cairo_font_options_set_hint_style options (cairo-hint-style (or hint-style (find-setting 'cairo.hint-style (default-hint-style)))))
        (cairo_font_options_set_hint_metrics options (cairo-hint-metrics (or hint-metrics (find-setting 'cairo.hint-metrics (default-hint-metrics)))))
        (if height
            (cairo_matrix_init_scale matrix height height)
          (cairo_matrix_init_identity matrix))
        (cairo_matrix_init_identity ctm)
        (prog1 (cairo_scaled_font_create font-face matrix ctm options)
          (cairo_matrix_t-free matrix)
          (cairo_matrix_t-free ctm)
          (cairo_font_options_destroy options))))
    
    (nextmethod)
    (let ((font-name (get-font-name~ font))
          (point-size (get-point-size~ font))
          (bold? (get-bold?~ font))
          (italic? (get-italic?~ font))
          (underline? (get-underline?~ font))
          (shadow (get-shadow~ font))
          (antialias (get-antialias~ font))
          (subpixel (get-subpixel~ font))
          (hint-style (get-hint-style~ font))
          (hint-metrics (get-hint-metrics~ font)))
      (set! font~self font)
      (set! local?~self (symbol? font-name))
      (set! handle~self (create-font local? font-name: font-name point-size: point-size bold?: bold? italic?: italic? underline?: underline?))
      (set! font-face~self (create-cairo-font-face local? handle~self))
      (set! scaled-font~self (create-cairo-scaled-font font-face point-size bold? antialias subpixel hint-style hint-metrics))
      (set! glyph-cache~self (make-vector 256 #f))))


  (method override (destroy)
    (cairo_scaled_font_destroy scaled-font)
    (destroy-cairo-font-face font-face)
    (destroy-font local? handle)
    (nextmethod))
  
  
  (method protected virtual (calculate-height point-size) <fl>
    (cast <fl> point-size))
  
  (method protected virtual (adjust-height-hack height)
    (+ 1 (fxceiling height)))
  
  
  (method protected virtual (default-antialias)
    'default)
  
  (method protected virtual (default-subpixel)
    'default)

  (method protected virtual (default-hint-style)
    'slight)

  (method protected virtual (default-hint-metrics)
    'default)
  
  
  (method protected virtual (create-font . rest)
    )
  
  
  (method protected virtual (destroy-font . rest)
    )
  
  
  (method protected virtual (create-cairo-font-face . rest)
    )
  
  
  (method protected virtual (destroy-cairo-font-face . rest)
    )
  
  
  (method protected virtual (cairo-glyph-index font char)
    )
  
  
  ;;;
  ;;;; Text
  ;;;
  
  
  (definition *font-surface*
    #f)
  
  
  (definition (font-surface)
    (unless *font-surface*
      (set! *font-surface* (new Memory-Surface #f {Dimension 0 0})))
    *font-surface*)

  
  (method public (text-extent text)
    (set-font~ (font-surface) font)
    (get-text-extent~ (font-surface) text))

  
  (method public (text-width text)
    (when text
      (set-font~ (font-surface) font)
      (get-text-width~ (font-surface) text)))
  

  (method public (font-height)
    (set-font~ (font-surface) font)
    (get-font-height~ (font-surface)))
  
  
  (method public (glyph-index char)
    (if (> char 255)
        (cairo-glyph-index font char)
      (or (vector-ref glyph-cache char)
          (let ((index (cairo-glyph-index font char)))
            (vector-set! glyph-cache char index)
            index))))
  

  ;;;
  ;;;; Metrics
  ;;;
  
  
  (method public (get-metrics)
    (unless metrics
      (set! metrics
            (begin
              (set-font~ (font-surface) font)
              (new Font-Metrics (get-text-metrics~ (font-surface)) (lambda (height) (adjust-height-hack height))))))
    metrics)

  
  (method public (get-all-widths)
    (unless all-widths
      (set! all-widths
            (begin
              (set-font~ (font-surface) font)
              (get-char-widths~ (font-surface)))))
    all-widths)
  
  
  (method public (get-widths . rest)
    (set-font~ (font-surface) font)
    (get-char-widths~ (font-surface)))
  
  
  (method public (get-char-width c)
    (let ((n (char->integer c)))
      (if (< n 256)
          (vector-ref (get-all-widths) n)
        (set-font~ (font-surface) font)
        (get-char-width~ (font-surface) n))))))
