;; All these simple, composite, mix, empty, separated, ... need big time simplification!


(module protected jazz.jml.xhtml.XHTML-Renderer jazz


(import (jazz.jml))


(class XHTML-Renderer extends JML-Renderer
  
  
  ;;;
  ;;;; Tags
  ;;;
  
  
  (definition Empty-Tags
    '(area base basefont br col frame hr img input link meta param))
  
  (definition Mix-Tags
    '(p td))
  
  (definition Pre-Tags
    '(pre))
  
  (definition Separated-Tags
    '(head body frameset))
  
  (definition Separated2-Tags
    '(html))
  
  
  ;;;
  ;;;; Render
  ;;;
  
  
  (method override (render self jml output)
    (render-jml self '() jml #f #f #f 0 output))
  
  
  (method (render-jml self context jml simple? mix? inside-pre? level output)
    (typecase jml
      ((JML-Text)
       (render-text self context jml output))
      (else
       (render-node self context jml simple? mix? inside-pre? level output))))


  (method virtual (render-text self context jml output)
    (let ((text (get-text jml)))
      (iterate text
               (lambda (c)
                 (let ((n (char->integer c)))
                   (if (> n 255)
                       (format output "&#{a};" n)
                     (case c
                       ((#\<) (format output "&lt;"))
                       ((#\>) (format output "&gt;"))
                       (else (format output "{c}" c)))))))))
  
  
  (method override (render-node self context jml simple? mix? inside-pre? level output)
    (if (is-not? jml JML-Node)
        (render jml self context simple? mix? inside-pre? level output)
      (let ((tag (get-tag jml)))
        (render-tag self context jml tag simple? mix? inside-pre? level output))))
  
  
  (method (render-tag self context jml tag simple? parent-mix? inside-pre? level output)
    (let* ((tab (get-tab-size preferences))
           (composite? (composite? jml))
           (mix? (memq? tag Mix-Tags))
           (pre? (memq? tag Pre-Tags))
           (inside-pre? (or pre? inside-pre?)))
      (when (and (memq? tag Separated-Tags) (not inside-pre?))
        (output-text self context output "{%}"))
      (unless (or simple? parent-mix? inside-pre?)
        (output-text self context output "{_ :v}" (* level tab)))
      (output-text self context output "<{a}" tag)
      (for-each-property (lambda (property value)
                           (if (null? value)
                               (output-text self context output " {a}" property)
                             (if (and (pair? value) (eq? (car value) :string))
                                 (render-string self context output property value)
                               (render-value self context output property value))))
                         (get-properties jml))
      (if (memq? tag Empty-Tags)
          (output-text self context output "/>")
        (output-text self context output ">")
        (when (and composite? (not inside-pre?))
          (output-text self context output "{%}"))
        (let ((new-level
               (case tag
                 ((html body) level)
                 (else (+ level 1)))))
          (render-children self context jml (not composite?) mix? inside-pre? new-level output))
        (when (and composite? (not mix?) (not inside-pre?))
          (output-text self context output "{_ :v}" (* level tab)))
        (when (and (memq? tag Separated2-Tags) (not inside-pre?))
          (output-text self context output "{%}"))
        (output-text self context output "{a}" (end-tag tag)))
      (unless (or simple? parent-mix? inside-pre?)
        (output-text self context output "{%}"))))
  
  
  (method virtual (render-string self context output property value)
    (output-text self context output " {a}=\"" property)
    (for-each (lambda (string)
                (output-text self context output "{a}" string))
              (cdr value))
    (output-text self context output "\""))
  
  
  (method virtual (render-value self context output property value)
    (output-text self context output " {a}=\"{a}\"" property value))
  
  
  (method (render-children self context jml simple? mix? inside-pre? level output)
    (for-each (lambda (sub)
                (render-jml self context sub simple? mix? inside-pre? level output))
              (get-children jml)))
  
  
  (method (output-text self context output format-string . parameters)
    (when output
      (let ((text (apply format format-string parameters)))
        (format output "{a}" text))))


  (definition (end-tag tag)
    (format "</{a}>" tag))))
