(module jazz.detprof jazz


(export (jazz.detprof.syntax))


(import (jazz.jml)
        (jazz.system)
        (profiler))


(define *profile*
  (make-table test: eq?))


(definition public (get-profile)
  *profile*)


(define time-spent-in-children
  (make-parameter 0))


(definition public (profile-code name proc)
  (if (profiler-on?)
      (let* ((start-time (get-performance-counter))
             (total-elapsed-time 0)
             (call (or (table-ref *profile* name #f)
                       (let ((call (make-profile-call)))
                         (table-set! *profile* name call)
                         call)))
             (result (parameterize ((time-spent-in-children 0))
                       (prog1 (proc)
                         (set! total-elapsed-time (- (get-performance-counter) start-time))
                         (profile-call-count-set! call (+ (profile-call-count call) 1))
                         (profile-call-duration-set! call (+ (profile-call-duration call) (- total-elapsed-time (time-spent-in-children))))))))
        (time-spent-in-children (+ (time-spent-in-children) total-elapsed-time))
        result)
    (proc)))


(definition public (profile->jml profile)
  (map (lambda (profile)
         (bind (name count . duration) profile
           (new JML-Element #f 'profile properties: (list 'name name 'count count 'duration duration))))
       (sort > (table->list profile) key: cddr))))
