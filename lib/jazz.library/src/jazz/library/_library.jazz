(library jazz.library jazz


(export (jazz.library.autoload))


;;;
;;;; Form
;;;


;; Not ideal to use the class name to register forms but will do for now as
;; it is not easy to access the metaclass at the point where forms are expanded


(definition Forms
  (make-table test: eq?))


(definition package (register-form class-name form)
  (table-set! Forms class-name form))

(definition package (get-registered-form class-name)
  (table-ref Forms class-name #f)))
