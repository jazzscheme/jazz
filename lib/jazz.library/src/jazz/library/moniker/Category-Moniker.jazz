(library protected jazz.library.moniker.Category-Moniker jazz


(import (jazz.io)
        (jazz.library)
        (jazz.platform)
        (jazz.utilities))


(class Category-Moniker extends Moniker)


@convert


(class Category-Moniker extends Moniker
  
  
  (slot category-name)
  
  
  @convert-literal
  (method meta (construct-literal context category-name)
    (new self category-name))
  
  
  (method (print printer readably)
    (format printer "~{{a} {s}}"
            (identifier-name (type-name (class-of self)))
            category-name))
  
  
  ;;;
  ;;;; Moniker
  ;;;


  (method (get-name)
    category-name)
  
  
  (method (get-file)
    (get-source))
  
  
  ;;;
  ;;;; Protocol
  ;;;
  
  
  @convert
  (method meta (get-protocol)
    'category)
  
  
  @convert
  (method meta (new-moniker list)
    (new self (car list)))
  
  
  (method (present)
    (format "{a}" category-name))
  
  
  ;;;
  ;;;; Initialization
  ;;;
  
  
  (method (initialize name)
    (nextmethod)
    (set! category-name name))
  
  
  ;;;
  ;;;; Source
  ;;;
  
  
  (method public (get-source)
    (either (get-manifest-source category-name)
            (error "Unable to find category: {t}" category-name)))
    
  
  ;;;
  ;;;; Input/Output
  ;;;


  (method (load-lines . rest)
    (load-lines~ (get-source)))


  (method (save-lines lines . rest)
    (save-lines~ (get-source) lines))
  
  
  (method (load-form)
    (load-form~ (get-source)))))
