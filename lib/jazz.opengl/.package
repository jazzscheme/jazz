(package jazz.opengl
  
  (title "OpenGL")
  (description "Interface to the OpenGL 3D graphic library")
  (authors "Guillaume Cartier" "Fred LeMaster")
  (stage release)
  (root "src")
  (install jazz.opengl.install)
  (products (jazz.opengl (unit jazz.opengl.product)
                         (update jazz.opengl
                                 jazz.opengl.autoload
                                 jazz.opengl.glew
                                 jazz.opengl.install
                                 jazz.opengl.platform
                                 jazz.opengl.product
                                 jazz.opengl.window)
                         (dependencies jazz
                                       jazz.foreign
                                       jazz.platform))
            (opengl (alias jazz.opengl)))
  (project ".project"))
