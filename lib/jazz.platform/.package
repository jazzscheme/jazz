(package jazz.platform
  
  (title "Platform")
  (description "Operating system platform access")
  (authors "Guillaume Cartier")
  (stage release)
  (root "src")
  (install jazz.platform.install)
  (products (jazz.platform (unit jazz.platform.product)
                           (update jazz.platform
                                   jazz.platform.install
                                   jazz.platform.product
                                   jazz.platform.types
                                   jazz.platform.types-syntax)
                           (library
                             (link-options
                                (windows (libdir "~~jazz/foreign/windows/lib")
                                         "-mwindows"
                                         "-lole32" "-loleaut32"
                                         "-lwinmm" "-lpdh" "-lpsapi")))
                           (dependencies jazz
                                         jazz.foreign))
            (platform (alias jazz.platform)))
  (project ".project"))
