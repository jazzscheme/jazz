(module protected jazz.platform.cairo.cairo-quartz jazz


(import (jazz.foreign)
        (jazz.platform.types)
        (jazz.platform.carbon (cond carbon))
        (jazz.platform.carbon.carbon-types (cond carbon))
        (jazz.platform.cocoa (cond cocoa))
        (jazz.platform.cairo.cairo-base))


(c-include "<cairo/cairo-quartz.h>")


;;;
;;;; Surface
;;;


(cond-expand
  (carbon
   (c-external (cairo_quartz_surface_create cairo_format_t uint uint) cairo_surface_t*)
   (c-external (cairo_quartz_surface_create_for_cg_context CGContextRef uint uint) cairo_surface_t*))
  (cocoa
   (c-external (cairo_quartz_surface_create cairo_format_t uint uint) cairo_surface_t*)
   (c-external (cairo_quartz_surface_create_for_cg_context CGContextRef uint uint) cairo_surface_t*))
  (else))


(definition public (create-cairo-image-surface compatibility width height)
  (cairo_image_surface_create CAIRO_FORMAT_RGB24 width height)))
