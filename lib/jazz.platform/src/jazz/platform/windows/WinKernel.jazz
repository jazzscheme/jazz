;;;
;;;; GetTempPath
;;;


(definition public (GetTempPath)
  (let* ((GetTempPath (c-function (DWORD WCHAR*) DWORD "GetTempPathW"))
         (size (GetTempPath 0 #f))
         (buffer (WCHAR-array-make size)))
    (GetTempPath size buffer)
    (prog1 (WCHAR-string buffer)
      (WCHAR-array-free buffer))))


(definition public (GetTempFileName directory prefix uunique)
  (let* ((GetTempFileName (c-function (CWSTR CWSTR UINT WCHAR*) UINT "GetTempFileNameW"))
         (buffer (WCHAR-array-make MAX_PATH))
         (result (GetTempFileName directory prefix uunique buffer)))
    (values result (prog1 (WCHAR-string buffer)
                     (WCHAR-array-free buffer)))))


;;;
;;;; Performance Counter
;;;


(definition public QueryPerformanceFrequency
  (c-function () int64
    "LARGE_INTEGER frequency;
     QueryPerformanceFrequency(&frequency);
     ___result = frequency.QuadPart;"))


(definition public QueryPerformanceCounter
  (c-function () int64
    "LARGE_INTEGER counter;
     QueryPerformanceCounter(&counter);
     ___result = counter.QuadPart;"))


(profiler-real-time-set!
  (lambda ()
    (* (/ (QueryPerformanceCounter) (QueryPerformanceFrequency)) 1000)))


