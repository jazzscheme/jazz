(module protected jazz.project.preference.Workbench-Preferences jazz


(import (jazz.jml)
        (jazz.ui))


(class Workbench-Preferences extends Preferences


  (property active-project initialize #f accessors generate)
  
  
  (form
    (<install> title: "Workbench"))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor)
    (new Workbench-Preferences-Descriptor)))


;;;
;;;; Design
;;;


(submodule design


(import (jazz.designer))


(class Workbench-Preferences-Descriptor extends Preferences-Descriptor
  
  
  (form
    (<install>                 can-rename?: #f can-delete?: #f can-relocate?: #f can-copy?: #f
      (<properties~>
        (<Property-Descriptor> name: active-project)))))))
