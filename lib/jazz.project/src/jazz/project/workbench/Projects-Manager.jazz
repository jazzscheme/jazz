(module protected jazz.project.workbench.Projects-Manager jazz


(import (jazz.catalog)
        (jazz.jml)
        (jazz.library)
        (jazz.project)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.view)
        (jazz.ui.window))


(class undocumented Projects-Manager extends Layout-View
  
  
  (slot hierarchical? initialize #t)


  (form
    (<install>                                               size: {Dimension 553 608} layout-type: border
      (<Layout-View>                   name: toolbar         size: {Dimension 300 33} location: north layout-type: flow layout-insets: {Rect 0 6 0 0}
        (<Toggle-Tool>                                       size: {Dimension 22 22} tooltip?: #t tooltip-text: "Display Flat / Hierarchical" resource: {Image-Resource "Tree"} portfolio: :images action-handler: {Event-Handler :form on-flat/hierarchical})
        (<Push-Button>                 name: update          title: "Update" size: {Dimension 100 22} location: tail action-handler: {Event-Handler :form on-update} default?: #t))
      (<Border-View>                   name: projects-border location: center border-type: edge style: entry
        (<Scroller-View>                                     vscroll?: #t
          (<!>                         name: content         layout-type: fill
            (<Tree-Header>                                   style: document
              (<!>                     name: content
                (<Tree-View>           name: projects        filled-column: name selection-handler: {Event-Handler :form on-selection-change} double-click-handler: {Event-Handler :form on-double-click} multiple-selection?: #t
                  (<Tree-Node-Column>  name: name            title: "Name" width: 150)
                  (<Tree-Label-Column> name: statistics      title: "Statistics" width: 250)))))))))
  
  
  (method meta override (external-name . rest)
    'projects-manager)
  
  
  ;;;
  ;;;; Access
  ;;;
  
  
  (method (get-tree)
    (locate 'projects))
  
  
  ;;;
  ;;;; Component
  ;;;

  
  (method override (finish initargs)
    (nextmethod initargs)
    (set-hierarchical? hierarchical?)
    (view-projects)
    (update-buttons))
    
  
  ;;;
  ;;;; Host
  ;;;
    
  
  (method meta override (host-icon)
    {Image-Resource "Catalog"})
  
  
  (method meta override (host-title)
    "Projects Manager")
  
  
  (method meta override (host-position)
    {Point 90 70})
  
  
  (method meta override (host-size)
    {Dimension 573 508})
  
  
  (method override (host-workspaces)
    '(home))
  
  
  (method override (focus-default)
    (acquire-focus~ (get-tree)))
  
  
  ;;;
  ;;;; Events
  ;;;


  (method override (resize dh dv)
    (nextmethod dh dv)
    (move-figure~ (locate 'update) dh 0)
    (size-figure~ (locate 'projects-border) dh dv))
  
  
  (method (on-flat/hierarchical evt)
    (set-hierarchical? (not hierarchical?))
    (view-projects))
  
  
  (method (set-hierarchical? flag)
    (debug flag)
    (set! hierarchical? flag)
    (let ((node-column (get-node-column~ (get-tree))))
      (set-toplevel-controls?~ (get-node-column~ (get-tree)) flag)
      (set-display-images?~ node-column flag)))
  
  
  (method (on-selection-change evt)
    (update-buttons))
  
  
  ;;;
  ;;;; Update
  ;;;


  (method public (view-projects)
    (define (insert-workbench tree)
      (insert-project tree #f (get-workbench) 0))
    
    (define (insert-project tree row project level)
      (let ((catalog (get-catalog~ project)))
        (let ((c0 (new Tree-Node image: (get-component-image~ project) title: (get-presentation-property~ project)))
              (c1 (new Tree-Label title: (if catalog (get-statistics~ catalog) ""))))
          (let ((row (add-row~ tree father: row state: 'expanded children: (list c0 c1) user-data: project)))
            (for-each (lambda (child)
                        (when (is? child Project)
                          (insert-project tree row child (+ level 1))))
                      (get-children~ project))))))
    
    (let ((tree (get-tree)))
      (remove-every-row~ tree)
      (with-update-locked~ tree
        (lambda ()
          (insert-workbench tree)))))


  (method package (on-update evt)
    (with-cursor :wait
      (lambda ()
        (update-selection))))
  
  
  (method (on-double-click evt)
    (let ((sender (get-sender~ evt))
          (alt? (get-alt?~ evt)))
      (case (get-name~ sender)
        ((projects)
         (with-cursor :wait
           (lambda ()
             (update-selection)))))))
  
  
  (method (update-selection)
    (let* ((tree (get-tree))
           (selection (get-selection~ tree)))
      (define (effective-selection selection)
        (if (null? selection)
            (naturals 0 (get-row-count~ tree))
          selection))
      
      (post-catalog
        (lambda ()
          (for-each (lambda (line)
                      (let ((catalog (get-user-data~ (get-row~ tree line))))
                        (update~ catalog)
                        (execute-event
                          (lambda ()
                            (let ((cell (new Cell line 2)))
                              (set-title~ (get-cell-data~ tree cell) (get-statistics~ catalog))
                              (invalidate-cell~ tree cell))))))
                    (effective-selection selection))))))
  
  
  (method (update-buttons)
    (let ((tree (get-tree)))
      (let ((count (get-row-count~ tree)))
        (set-enabled?~ (locate 'update) (> count 0)))))
  

  ;;;
  ;;;; Session
  ;;;
  
  
  (method override (confirm-close . rest)
    (save-session))
  
  
  (method override (save-session)
    @to-convert
    (let ((info
           (list (external-name)
                 position: (get-position)
                 size:     (get-size))))
      (push-property~ properties 'Opened-Windows info)))))
