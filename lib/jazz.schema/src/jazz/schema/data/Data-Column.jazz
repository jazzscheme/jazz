(library protected jazz.schema.data.Data-Column jazz


(import (jazz.library)
        (jazz.schema)
        (jazz.utilities))


(class Data-Column extends Data-Object


  (slot datatype)
  (slot width)
  
  
  @convert-literal
  (method meta (construct-literal context name properties)
    (new self name: name properties: properties))
  
  
  (method (initialize (name: name {}) (parent: parent {}) (datatype: datatype {}) (width: width {}) (properties: properties '()))
    (bind-keywords ((datatype datatype) . others) properties
      (nextmethod)
      (set! name~self name)
      (set! parent~self parent)
      (set! datatype~self datatype)
      (set! width~self width)
      (set! properties~self others)))
  
  
  ;;;
  ;;;; Print
  ;;;
  
  
  (method protected (print-schema printer)
    (format printer "~{{s} {s} (datatype: {s} {l detail: :reader})}"
            (identifier-name (type-name (class-of self)))
            name
            datatype
            properties))
  
  
  ;;;
  ;;;; Object
  ;;;
  
  
  (method (get-kind)
    'column)
  
  
  ;;;
  ;;;; Access
  ;;;


  (method public (get-datatype)
    datatype)


  (method public (get-width)
    width)
  
  
  (method (property-names)
    '(datatype nullable? ordinal-position default-value auto-increment? display-format validation-rule validation-text allow-zero-length? identity? identity-replication? identity-seed identity-increment timestamp? description))
  
  
  (method (get-property keyword . rest)
    (case keyword
      ((datatype:) datatype)
      ((width:) width)
      (else (apply nextmethod keyword rest))))
  
  
  (method (set-property keyword value)
    (case keyword
      ((datatype:) (set! datatype value))
      ((width:) (set! width value))
      (else (nextmethod keyword value))))
  
  
  (method public (auto-generate?)
    (or (and (has-property? 'timestamp?) (get-property 'timestamp?))
        (and (has-property? 'identity?) (get-property 'identity?))))
  
  
  ;;;
  ;;;; Present
  ;;;
  
  
  (method public (get-prefered-width)
    50
    @convert
    (either (get-size~ datatype) 10))))
