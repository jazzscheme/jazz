(module protected jazz.schema.data.Data-Index jazz


(import (jazz.schema))


(class Data-Index extends Data-Object
  
  
  ;;;
  ;;;; Print
  ;;;
  
  
  (method protected (print-schema printer)
    (format printer "~{{s} {s} {s list?: #t}}"
            (identifier-name (category-name (class-of self)))
            name
            properties))
  
  
  ;;;
  ;;;; Object
  ;;;
  
  
  (method override (get-kind)
    'index)
  
  
  ;;;
  ;;;; Access
  ;;;
  
  
  (method override (property-names)
    '(unique? clustered? ignore-duplicates? recompute-statistics? fill-factor pad-index? fields/orders))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  @not-a-component!
  (method meta override (get-class-descriptor)
    (new Data-Index-Descriptor)))


;;;
;;;; Design
;;;


@not-a-component!
(submodule design


(import (jazz.designer))


(class Data-Index-Descriptor extends Class-Descriptor
  
  
  (method override (component-present-property component property value)
    (case property
      ((fields/orders) (format "{l detail: :human separator: \", \"}" (map (lambda (field/order) (format "{a} {a}" (first field/order) (second field/order))) value)))
      (else (nextmethod property value)))))))
