(module jazz.sound.test jazz


(import (jazz.sound))


(startup-sound)
(let ((in-device (sound-default-input-device))
      (out-device (sound-default-output-device)))
  (let ((layout (determine-best-sound-layout in-device out-device))
        (rate (determine-best-sound-rate in-device out-device))
        (format (determine-best-sound-format in-device out-device))
        (latency 2.))
    (let ((in-stream (sound-create/open-instream in-device format rate layout latency))
          (out-stream (sound-create/open-outstream out-device format rate layout latency)))
      (sound-setup-buffers in-stream out-stream latency)
      (sound-start-instream in-stream)
      (sound-start-outstream out-stream)
      (sleep 60)
      (sound-destroy/unref-instream in-device in-stream)
      (sound-destroy/unref-outstream out-device out-stream)
      (shutdown-sound)))))
