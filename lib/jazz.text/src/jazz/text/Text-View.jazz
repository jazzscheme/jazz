  (method (on-goto-line evt)
    (let* ((start (get-start))
           (line (get-line~ start))
           (str (request-string title: "Goto Line" prefix: "Line no:" initial-value: (->string (+ line 1)))))
      (cond ((starts-with? str "+")
             (goto-line (+ line (parse-integer (subseq str 1 (cardinality str))))))
            ((starts-with? str "-")
             (goto-line (- line (parse-integer (subseq str 1 (cardinality str))))))
            (else
             (goto-line (- (parse-integer str) 1))))))
  
  
