      (define (restrict-col cell)
        (let ((line (get-line~ cell))
              (col (get-col~ cell)))
          (let ((len (paragraph-length line)))
            (if (> col len)
                (new Cell line len)
              cell))))
      
      (restrict-col (restrict-row cell))))
  
  
