;;;
;;;; Runs
;;;


(definition public (for-each-run runs <list> proc)
  (let ((offset 0))
    (for-each (lambda (run <Run>)
                (let* ((len (get-length~ run))
                       (limit (+ offset len)))
                  (proc run offset limit)
                  (set! offset limit)))
              runs)))


