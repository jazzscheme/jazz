(module protected jazz.ui.dialog.Dialog jazz


(import (jazz.event (cond (not cocoa)))
        (jazz.ui)
        (jazz.window))


(class Dialog extends Overlapped
  
  
  (property closable?       initialize #t accessors generate)
  (property miniaturizable? initialize #f accessors generate)
  (property sizable?        initialize #f accessors generate)
  
  
  (method override (new-root)
    (new Dialog-Host offscreen?: #t))
  
  
  ;;;
  ;;;; Close
  ;;;


  (cond-expand
    (cocoa
      (method override (close-window)
        (cancel-modal~ root)
        processed))
    (else
      (method override (close-window)
        ;; on Windows Vista and upward, the close message must go through to completion
        (delay-event
          (lambda ()
            (cancel-modal~ root)))
        processed)))
  
  
  (method override (destroy)
    (destroy-modal~ root)
    (nextmethod)))


(cond-expand
  (cocoa
    (specific (window-closable? (<Dialog> dialog) rest)
      (get-closable?~ dialog))
    
    (specific (window-miniaturizable? (<Dialog> dialog) rest)
      (get-miniaturizable?~ dialog))
    
    (specific (window-resizable? (<Dialog> dialog) rest)
      (get-sizable?~ dialog)))
  (else)))
