(module protected jazz.ui.preference.Shortcut-Chooser jazz


(import (jazz.jml)
        (jazz.ui))


(class undocumented Shortcut-Chooser extends Shortcut-Viewer
  
  
  (property action-name initialize #f accessors generate)
  
  
  (form
    (<install>
      (<!>     name: header
        (<!>   name: title         title: "Choose shortcut"))
      (<!>     name: bindings-view
        (<!>   name: title         title: "Detected conflicts:"))
      (<!>     name: buttons
        (<!>   name: ok            title: "Accept"))))
    
  
  ;;;
  ;;;; Host
  ;;;

  
  (method meta override (host-title)
    "Choose")
  
  
  ;;;
  ;;;; Setup
  ;;;
  
  
  (method override (setup-description)
    (set-title~ (locate 'description)
      (format "Please press the shortcut that will be bound{? to {a}~}" action-name)))
    
  
  ;;;
  ;;;; Choose
  ;;;
  
  
  (method override (choose-hook shortcut bindings)
    (if (null? bindings)
        (begin
          (end-modal~ (get-host) shortcut)
          #f)
      #t))))
