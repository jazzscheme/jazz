(library protected jazz.ui.preference.aliases jazz


(import (jazz.designer)
        (jazz.jml)
        (jazz.library)
        (jazz.ui))


;;;
;;;; Preferences
;;;


(class undocumented Aliases-Preferences extends Preferences
  
  
  (form
    (<install> title: "Aliases"))


  ;;;
  ;;;; Designer
  ;;;
  
  
  (method (can-rename-component?)
    #f)
  
  
  (method (can-delete-component?)
    #f)
  
  
  (method (can-move-component?)
    #f)
  
  
  (method (can-copy-component?)
    #f)
  
  
  (method (get-addable-classes)
    (list
      Alias-Configuration))
  
  
  (method (get-addable-details)
    '((alias 150 #f) (directory 300 #t))))


;;;
;;;; Configuration
;;;


(class undocumented Alias-Configuration extends Preferences
  
  
  (property alias     initialize {} accessors generate)
  (property directory initialize {} accessors generate)
  
  
  (form
    (<install> icon: {Bitmap-Resource "Link"}))
  
  
  ;;;
  ;;;; Domain
  ;;;
  
  
  (method meta (get-domain property)
    (case (field-name property)
      (else (nextmethod property))))
  
  
  ;;;
  ;;;; Designer
  ;;;
  
  
  (method meta (get-class-presentation)
    "Alias")

  
  (method meta (property-presentation property)
    (case (field-name property)
      ((alias) "Alias")
      ((directory) "Directory")
      (else (nextmethod property))))
  
  
  (method (presentation-property? property)
    (memq? (field-name property) '(alias)))
  
  
  (method (get-presentation)
    alias)
  
  
  (method (set-presentation designer presentation)
    (set-property~ designer self :alias (string->symbol presentation)))
  
  
  (method (get-row-instance property)
    (case (field-name property)
      ((directory) (new Directory-Row))
      (else (nextmethod property))))
  
  
  (method (get-categorized-properties)
    '(alias directory))))
