(module protected jazz.ui.search.Search-View-Preferences jazz


(import (jazz.designer)
        (jazz.jml)
        (jazz.library)
        (jazz.ui))


(class undocumented Search-View-Preferences extends Preferences


  (property targets         initialize '() accessors generate)
  (property whole-words?    initialize #f  accessors generate)
  (property ignore-case?    initialize #f  accessors generate)
  (property preserve-case?  initialize #f  accessors generate)
  (property play-recording? initialize #f  accessors generate)
  (property expression?     initialize #f  accessors generate)
  
  
  (form
    (<install> icon: {Image-Resource "Link"}))


  ;;;
  ;;;; Domain
  ;;;
  
  
  (method meta override (get-domain property)
    (case (field-name property)
      ((whole-words? ignore-case? preserve-case? play-recording? expression?) (new Boolean-Domain))
      (else (nextmethod property))))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor)
    (new Search-View-Preferences-Descriptor)))


;;;
;;;; Design
;;;


(submodule design


(import (jazz.designer))


(class Search-View-Preferences-Descriptor extends Preferences-Descriptor
  
  
  (form
    (<install>
      (<properties~>
        (<Property-Descriptor> name: targets         title: "Targets"
          (<Value-Domain>      name: domain))
        (<Property-Descriptor> name: whole-words?    title: "Whole Words?"
          (<Boolean-Domain>    name: domain))
        (<Property-Descriptor> name: ignore-case?    title: "Ignore Case?"
          (<Boolean-Domain>    name: domain))
        (<Property-Descriptor> name: preserve-case?  title: "Preserve Case?"
          (<Boolean-Domain>    name: domain))
        (<Property-Descriptor> name: play-recording? title: "Play Recording?"
          (<Boolean-Domain>    name: domain))
        (<Property-Descriptor> name: expression?     title: "Expression?"
          (<Boolean-Domain>    name: domain))))))))
