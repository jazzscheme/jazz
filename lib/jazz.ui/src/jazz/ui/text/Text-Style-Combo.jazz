(module protected jazz.ui.text.Text-Style-Combo jazz


(import (jazz.ui))


(class undocumented Text-Style-Combo extends Text-Combo
  
  
  ;;;
  ;;;; Client
  ;;;
  
  
  (method override (client-update)
    (define (get-all-styles)
      (let ((formats (remove-false (accumulate (get-formats~ client) get-name~)))
            (styles (remove-false (accumulate (get-styles~ client) get-name~))))
        (union formats styles)))
    
    #f
    @convert
    (let ((names (accumulate (get-all-styles)
                             (lambda (name)
                               (list name (->string name)))
                             List)))
      (set-choices names)))
  
  
  ;;;
  ;;;; Selection
  ;;;
  
  
  (method override (selection-change)
    #f
    @convert
    (let* ((end (get-end~ client))
           (style (get-style-at~ client end)))
      (set-content (->string (or (get-name~ style) (get-base~ style))))))
  
  
  ;;;
  ;;;; Choice
  ;;;
  
  
  (method override (combo-choice)
    (set-selection-style~ client (get-value))
    (selection-change))))
