(module protected jazz.ui.text.View-Style jazz


(import (jazz.ui))


(class View-Style extends Style
  
  
  @w
  (definition properties
    '(alignment:
      form:))
  
  
  @w
  (slot protected form)
  (slot protected view getter generate)
  
  
  @convert-literal
  (method meta (construct-literal context . rest)
    (apply new self rest))
  
  
  (method override (initialize . rest)
    (bind-keywords ((view {}) . others) rest
      (apply nextmethod others)
      (set! view~self view)))


  (method override (compare-object target)
    (let ((result (nextmethod target)))
      (case result
        ((:equal)
         (if (eq? view (get-view~ target))
             :equal
           :not-equal))
        (else
         result))))
  
  
  (method override (print printer readably)
    (format printer "~{{a} alignment: {s} view: {s}}"
            (identifier-name (type-name (class-of self)))
            alignment
            view))
  
  
  @w
  (method (get-value property)
    (case property
      ((form:) form)
      (else (nextmethod property))))
  
  
  @w
  (method (set-value property value)
    (case property
      ((form:) (set! form value))
      (else (nextmethod property value))))
  
  
  ;;;
  ;;;; Access
  ;;;
  
  
  @w
  (method public (get-form)
    form)
  
  
  @w
  (method public (set-view value)
    (set! view value))
  
  
  ;;;
  ;;;; Size
  ;;;
  
  
  (method override (get-width)
    (get-width~ view))
  
  
  (method override (get-height)
    (get-height~ view))
  
  
  (method override (run-width run)
    (get-width))
  
  
  ;;;
  ;;;; Text
  ;;;
  
  
  (method override (propagate?)
    #f)
  
  
  ;;;
  ;;;; Wrap
  ;;;
  
  
  (method override (place-update h v)
    (set-position~ view (new Point h v)))
  
  
  (method override (height-update height)
    (let* ((pos (get-position~ view))
           (h (get-h~ pos))
           (v (+ (get-v~ pos) (justify-element (get-height) height))))
      (set-position~ view (new Point h v))))))
