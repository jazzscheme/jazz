(module protected jazz.ui.view.Entry-Combo-Text-View jazz


(import (jazz.graphic)
        (jazz.jml)
        (jazz.ui))


(class undocumented Entry-Combo-Text-View extends Combo-Text-View
  
  
  (property editor initialize #f accessors generate)
  
  
  (form
    (<install> default-style: {Text-Style name: Default font: {Font name: Label}} left-padding: 2 top-padding: 2 accepts-returns?: #f focus-selects-all?: #t show-unfocused-selection?: #f))
  
  
  (method override (focus-gained)
    (nextmethod)
    (when (and editor selectable?)
      (let ((manager (get-manager~ editor)))
        (when manager
          (editor-focus-gained~ manager editor)))))
  
  
  (method override (focus-lose)
    (nextmethod)
    (when (and editor selectable?)
      (let ((manager (get-manager~ editor)))
        (when manager
          (editor-focus-lose~ manager editor)))))
  
  
  (method override (get-context-menu)
    (new-text-context-menu))))
