(module protected jazz.ui.view.Image-Tool jazz


(import (jazz.ui))


(class Image-Tool extends Tool-Button


  (property portfolio           initialize {} getter get-portfolio           setter set-portfolio)
  (property image-name          initialize {} getter get-image-name          setter set-image-name)
  (property disabled-image-name initialize {} getter get-disabled-image-name setter set-disabled-image-name)
  
  
  (slot image          initialize (new Image view-position: {Point 2 2}))
  (slot disabled-image initialize (new Image view-position: {Point 2 2}))
  
  
  ;;;
  ;;;; Access
  ;;;


  (method public (get-portfolio)
    (get-portfolio~ image))


  (method public (set-portfolio portfolio)
    (let ((portfolio (if (is? portfolio Portfolio) portfolio (child portfolio))))
      (set-portfolio~ image portfolio)
      (set-portfolio~ disabled-image portfolio))
    (invalidate-view))


  (method public (get-image-name)
    (get-image-name~ image))


  (method public (set-image-name name)
    (when (not (get-disabled-image-name))
      (set-disabled-image-name (default-disabled-resource name)))
    (set-image-name~ image name)
    (invalidate-view))


  (method public (get-disabled-image-name)
    (get-image-name~ disabled-image))


  (method public (set-disabled-image-name name)
    (set-image-name~ disabled-image name)
    (invalidate-view))
  
  
  (method public (preload-images)
    (preload-image~ image)
    (preload-image~ disabled-image))
  
  
  ;;;
  ;;;; Drawing
  ;;;


  (method override (draw-tool surface context)
    (let ((offset (if (eq? (get-state) 'pushed) 2 1))
          (enabled? (get-enabled?)))
      (if (not enabled?)
          (draw~ disabled-image surface context offset offset)
        (draw~ image surface context offset offset enabled?: enabled?))))))
