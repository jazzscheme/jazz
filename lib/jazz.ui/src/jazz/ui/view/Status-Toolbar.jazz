(library jazz.ui.view.Status-Toolbar jazz


(import (jazz.graphic)
        (jazz.jml)
        (jazz.library)
        (jazz.literals)
        (jazz.ui)
        (jazz.ui.workspace)
        (jazz.utilities))


(class Status-Toolbar extends Toolbar
    
  
  (form
    (<install> background: {Color name: Medium}))
  
  
  (method (finish rest)
    (nextmethod rest)
    (let ((workspace (selected-workspace)))
      (when workspace
        (update-status~ workspace))))
  
  
  (method (host-install)
    (let ((appl (get-application)))
      (set-status-bar~ appl self)))
  
  
  (method (host-uninstall)
    (let ((appl (get-application)))
      (set-status-bar~ appl {})))
  
  
  ;;;
  ;;;; Layout
  ;;;
  
  
  (method (layout)
    (let ((flow (new Flow-Layout insets: {Rect 0 2 0 0} padding: 2)))
      (layout~ flow children (get-width) (get-height))))))
