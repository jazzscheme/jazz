(library protected jazz.ui.view.Toggle-Tool jazz


(import (jazz.graphic)
        (jazz.ui))


(class Toggle-Tool extends Image-Tool
  

  (property selected? initialize #f getter get-selected? setter set-selected?)
  
  
  (method override (default-size)
    {Dimension 22 22})
  
  
  ;;;
  ;;;; Drawing
  ;;;


  (method override (draw-frame surface)
    (if (and selected? (memq? (get-state) '(inactive highlighted out-pushed)))
        (draw-pushed surface)
      (nextmethod surface)))


  (method override (draw-tool surface context)
    (let ((offset (if (or selected? (eq? (get-state) 'pushed)) 2 1))
          (enabled? (get-enabled?)))
      (if (not enabled?)
          (draw~ disabled-image surface context offset offset)
        (draw~ image surface context offset offset enabled?: enabled?))))
  
  
  (method override (draw-background surface context)
    (let ((state (get-state)))
      (if selected?
          (let ((bounds (get-bounds)))
            (fill-rect~ surface bounds {Color name: Light-Background}))
        (nextmethod surface context))))
  
  
  ;;;
  ;;;; Mouse
  ;;;


  (method override (up)
    (when (eq? (get-state) 'pushed)
      (toggle-selected?)
      (process-action self)))
  
  
  ;;;
  ;;;; Selected
  ;;;


  (method public (get-selected?)
    selected?)


  (method public (set-selected? flag)
    (when (neq? flag selected?)
      (set! selected? flag)
      (invalidate-view)))


  (method public (toggle-selected?)
    (set-selected? (not selected?)))))
