(module protected jazz.ui.view.Toolbar jazz


(import (jazz.jml)
        (jazz.skin)
        (jazz.ui))


(class Toolbar extends Layout-View
  
  
  (form
    (<install> layout-type: flow layout-insets: {Rect 2 3 0 0}))
  
  
  (method override (mouse-activate?)
    #f)
  
  
  ;;;
  ;;;; Drawing
  ;;;
  
  
  (method override (draw-background surface context)
    (let ((skin (get-skin)))
      (let ((background (get-background~ skin)))
        (if (or (not background) (eq? background 'none))
            (nextmethod surface context)
          (let ((bounds (get-bounds)))
            (fill-background~ surface bounds background))))))
  
  
  ;;;
  ;;;; Skin
  ;;;
  
  
  (method override (get-skin)
    (find-skin 'ui:toolbar))))
