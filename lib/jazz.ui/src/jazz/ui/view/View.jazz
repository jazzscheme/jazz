        (update-window~ player))))
  
  
  (method public (view-invalidater)
    (when player
      (let ((rect (acquire~ (get-root) self (get-bounds)))
            (player player))
        (lambda ()
          (when player
            (invalidate-rect~ player rect))))))

  
