  ;;;
  ;;;; Clipping
  ;;;
  
  
  (method override (get-parent/child-clipper child h v)
    (let ((sc <fl> (if scaled? scaling 1.0)))
      (let ((p (get-translated-clipper (- (* h sc) (get-h~ (get-position~ child))) (- (* v sc) (get-v~ (get-position~ child)))))
            (c (offset-rect (get-bounds~ child) (fxround h) (fxround v))))
        (when scaled?
          (set-left~ p (fxround (/ (get-left~ p) sc)))
          (set-top~ p (fxround (/ (get-top~ p) sc)))
          (set-right~ p (fxround (/ (get-right~ p) sc)))
          (set-bottom~ p (fxround (/ (get-bottom~ p) sc))))
        (rect-intersection p c))))
  
  
