(module protected jazz.ui.widget.Moniker-Widget jazz


(import (jazz.io)
        (jazz.io.protocol)
        (jazz.jml)
        (jazz.library)
        (jazz.platform)
        (jazz.system)
        (jazz.ui)
        (jazz.ui.view))


(class Moniker-Widget extends View
  

  (property mode                   initialize 'open getter get-mode                   setter set-mode)
  (property protocol               initialize 'file accessors generate)
  (property parameters             initialize '()   accessors generate)
  (property display-logical?       initialize {}    accessors generate)
  (property display-protocol?      initialize {}    accessors generate)
  (property anchors                initialize {}    accessors generate)
  (property moniker-update-handler initialize {}    accessors generate)
  

  (form
    (<install>                                        size: {Dimension 142 22}
      (<Border-View>             name: moniker-border border-type: edge
        (<Scroller-View>         name: scroller       hscroll?: #f vscroll?: #f
          (<!>                   name: content        layout-type: fill
            (<Moniker-Text-View> name: text           accepts-returns?: #f show-unfocused-selection?: #f left-padding: 2 top-padding: 2 return-press-handler: {Event-Handler :form on-return-press} receive-files-handler: {Event-Handler :form on-receive-files}))))
      (<Push-Tool>               name: browse         resource: {Image-Resource "Open"} portfolio: :icons action-handler: {Event-Handler :form on-browse} receive-files-handler: {Event-Handler :form on-receive-files})))

  
  ;;;
  ;;;; Events
  ;;;
 
  
  (method (on-browse evt)
    (browse-moniker))
  
  
  (method override (on-return-press evt)
    (when return-press-handler
      (invoke~ return-press-handler self evt)))
  
  
  (method (on-receive-files evt)
    (let ((pos (get-property~ evt position:))
          (files (get-property~ evt files:)))
      (if receive-files-handler
          ;; rectify sender in event
          (invoke~ receive-files-handler self (new Event :receive-files self position: pos files: files))
        (let ((handler (get-protocol-handler protocol)))
          (if (and (= (length files) 1) (is? (car files) handler))
              (set-moniker (car files))
            (bell))))))
    
  
  ;;;
  ;;;; Access
  ;;;


  (method public (get-mode)
    mode)


  (method public (set-mode value)
    (set! mode value)
    (let ((browse (locate 'browse)))
      (case mode
        ((open) (set-resource~ browse {Image-Resource "Open"}))
        ((save) (set-resource~ browse {Image-Resource "Save"})))))

  
  (method public (call-moniker-update)
    (if moniker-update-handler
        (invoke~ moniker-update-handler self (new Event :update self))
      (moniker-update)))
  
  
  (method public (get-text)
    (locate 'text))

  
  ;;;
  ;;;; Enabled
  ;;;
  
  
  (method override (set-enabled? flag)
    (set! enabled? flag)
    (set-enabled?~ (locate 'text) flag)
    (set-enabled?~ (locate 'browse) flag)
    (invalidate-view))

  
  ;;;
  ;;;; Outer
  ;;;
  
  
  (method override (inner? view)
    (memq? view children))
    
  
  ;;;
  ;;;; Layout
  ;;;
  
  
  (method override (layout)
    (define (moniker-position size)
      {Point 0 1})
    
    (define (moniker-size size)
      (new Dimension (- (get-width~ size) 25) 19))
    
    (define (browse-position size)
      (new Point (- (get-width~ size) 22) 0))
    
    (define (browse-size size)
      {Dimension 22 22})
    
    (let ((size (get-size)))
      (set-position~ (locate 'moniker-border) (moniker-position size))
      (set-size~ (locate 'moniker-border) (moniker-size size))
      (set-position~ (locate 'browse) (browse-position size))
      (set-size~ (locate 'browse) (browse-size size))))
    
  
  ;;;
  ;;;; Browse
  ;;;
  
  
  (method public (browse-moniker)
    (let* ((handler (case mode ((open) (get-protocol-handler protocol)) @convert ((save) SaveFile-Dialog)))
           (arguments (case mode ((open) (cons actual: (cons (get-moniker) parameters))) ((save) parameters)))
           (moniker (apply moniker-modal handler arguments)))
      (set-moniker moniker)
      (let ((text (get-text)))
        (acquire-focus~ text)
        (set-caret~ text (text-ending~ text))
        (ensure-displayed~ text force-horizontal: 'tail reposition?: #t))))
    
  
  ;;;
  ;;;; Content
  ;;;

  
  (method public (get-moniker)
    (let ((string (get-string-content~ (get-text))))
      (unless (empty-string? string)
        (if (not (alias-displayed?))
            (let ((handler (get-protocol-handler protocol))
                  (list (tokenise-filename string)))
              (anchorize~ (moniker-new handler list) anchors: anchors))
          (let ((content (read-string-content string)))
            (receive (handler list) (parse-content content)
              (let ((moniker (moniker-new handler list)))
                (if (is? moniker Pathname)
                    (anchorize~ moniker anchors: anchors)
                  moniker))))))))
  
  
  (method (parse-content content)
    (if (not (protocol-displayed?))
        (values (get-protocol-handler protocol) content)
      (bind (protocol . list) content
        (values (get-protocol-handler protocol) list))))
  
  
  (method public (set-moniker moniker (generate-event?: generate-event? #t))
    (set-string-content~ (get-text) (if (null? moniker) "" (present-moniker moniker)))
    (when generate-event?
      (call-moniker-update)))
  
  
  (method protected virtual (moniker-update)
    )
  
  
  (method (present-moniker moniker)
    (if (not (alias-displayed?))
        (parse~ moniker)
      (if (not (protocol-displayed?))
          (present~ moniker)
        (format "{a}: {a}"
                (get-protocol~ (class-of moniker))
                (present~ moniker)))))
  
  
  (method (alias-displayed?)
    (if (not display-logical?)
        (display-aliases?~ (get-application))
      display-logical?))
  
  
  (method (protocol-displayed?)
    (if (not display-protocol?)
        (display-protocol?~ (get-application))
      display-protocol?))
  
  
  (method override (get-modified?)
    (get-modified?~ (get-controller~ (get-text))))
  
  
  (method override (set-modified? flag)
    (set-modified?~ (get-controller~ (get-text)) flag))
  
  
  ;;;
  ;;;; Validate
  ;;;
  
  
  (method override (validate-content)
    (catch (Parse-Error err
             (message-box (exception-reason err) yes: "Change It")
             (focus-body)
             (throw-cancel))
      (get-moniker)))
  
  
  (method public (focus-body)
    (let ((text (get-text)))
      (acquire-focus~ text)
      (select-all~ text)))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor)
    (new Moniker-Widget-Descriptor)))


;;;
;;;; Design
;;;


(submodule design


(import (jazz.designer))


(class Moniker-Widget-Descriptor extends View-Descriptor
  
  
  (method override (class-property-presentation class property)
    (case (field-name property)
      ((mode) "Mode")
      ((protocol) "Protocol")
      ((parameters) "Parameters")
      ((display-logical?) "Display Logical")
      ((display-protocol?) "Display Protocol")
      ((anchors) "Anchors")
      ((moniker-update-handler) "Moniker Update Handler")
      (else (nextmethod class property)))))))
