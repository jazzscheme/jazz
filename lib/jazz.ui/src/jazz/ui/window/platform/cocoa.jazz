(definition package (process-messages-single-threaded process thunk)
  (declare (proper-tail-calls))
  (let (loop)
    (platformPollEvents)
    (thread-process-call-ste~ process thunk)
    (sleep .01)
    (when (thread-loop? (current-thread))
      (loop))))


