;;;
;;;; Message Pump
;;;


(definition package (process-messages-single-threaded thunk)
  (define (process-message msg)
    (unless (translate-shortcut msg)
      (TranslateMessage msg)
      (DispatchMessage msg)))
  
  (declare (proper-tail-calls))
  
  (let ((msg (MSG-make)))
    (let (loop)
      (when (GetMessage msg NULL 0 0)
        (process-message msg)
        (thunk)
        (loop)))
    (MSG-free msg)))


(definition package (process-messages-multi-threaded)
  (define (process-message msg)
    (execute-event
      (lambda ()
        (unless (translate-shortcut msg)
          (TranslateMessage msg)
          (DispatchMessage msg)))))
  
  (define (process)
    (declare (proper-tail-calls))
    
    ;; put back here to see if moving it before the read was the cause of many
    ;; intermittent bugs
    
    ;; because MsgWaitForMultipleObjects will *not* remove messages already present
    ;; in the message queue, we need to process those before the blocking call to read
    (let ((msg (MSG-make)))
      (while (PeekMessage msg NULL 0 0 PM_REMOVE)
        (process-message msg))
      (MSG-free msg))
    
    (let ((port (open-event-queue QS_ALLINPUT))
          (thread (current-thread)))
      (let (loop)
        (let ((msg (read port)))
          (process-message msg)
          (MSG-free msg))
        (when (thread-loop? thread)
          (loop)))))
  
  (new-thread process 'message-pump))


;;;
;;;; Dispatch
;;;


(definition callback-level
  0)

(definition callback-thread-mutex
  (make-mutex 'callback-thread-mutex))

(definition callback-thread-condition
  (make-condition 'callback-thread-condition))


(definition (message-callback hwnd <foreign> msg <int> wparam <int> lparam <int>)
  (define (process)
    (let ((window (get-window hwnd)))
      (when (and (not window) (get-in-creation))
        (set! window (get-in-creation))
        (set-handle~ window hwnd)
        (set-window hwnd window)
        (set-in-creation {}))
      (if (not window)
          (DefWindowProc hwnd msg wparam lparam)
        (dispatch-message window msg wparam lparam))))
  
  (if (get-events-single-threaded?)
      (if (primordial-thread?)
          (process)
        (snapshot-process reason: "Message callback from non-primordial thread")
        (exit 1))
    (let ((level (begin
                   (mutex-lock! callback-thread-mutex)
                   (increase! callback-level)
                   (prog1 callback-level
                     (mutex-unlock! callback-thread-mutex)))))
      (unwind-protect
          (call-event process)
        (let (iterate)
          (mutex-lock! callback-thread-mutex)
          (if (= level callback-level)
              (begin
                (decrease! callback-level)
                (mutex-unlock! callback-thread-mutex))
            @debug
            (terminal 'interleaved-problem-detected (current-thread) level callback-level hwnd msg wparam lparam)
            (mutex-unlock! callback-thread-mutex callback-thread-condition)
            (iterate)))))))


(set-process-hwnd-message message-callback)


