  (method public (view-invalidater self)
    (and player (not (inhibit-invalidates?))
      (with-clipped-transformation-surface self
        (lambda (surface)
          (let ((player player)
                (rect (logical->device surface (get-clipper surface))))
            (lambda ()
              (invalidate-rect player rect)))))))

  
