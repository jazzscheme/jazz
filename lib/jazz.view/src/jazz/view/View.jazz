        (let ((dh (- width pw))
              (dv (- height ph)))
          (when (or (/= dh 0) (/= dv 0))
            (resize self dh dv)))))
    (layout-scrollee self)
    (unless (adjust? self)
      (invalidate-layout self)
      (when (get-finished? self)
        (call-layout self))))


