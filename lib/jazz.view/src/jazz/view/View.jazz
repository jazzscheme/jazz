  (method override (set-player self plr)
    (when (neq? player plr)
      (detach-mouse-in self)
      (let ((own-focus (detach-view-focus self)))
        (set! player plr)
        (nextmethod self plr)
        (when (and player own-focus)
          (acquire-focus own-focus)))))
  
  
