  (method override (set-parent self parent (safe?: safe? #t))
    (when safe?
      (assert (primordial-thread?)))
    (let ((invalidater (view-invalidater self)))
      (nextmethod self parent)
      (set-player self (and parent (get-player parent)))
      (when invalidater
        (invalidater))
      (when parent
        (invalidate-view self))))
  
  
