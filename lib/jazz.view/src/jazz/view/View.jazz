      (for-each (lambda (child)
                  (when (and (is? child class)
                             (eqv? (get-group child) group))
                    (let ((selected? (eq? (get-name child) name)))
                      (set-selected? child selected?)
                      (when selected?
                        (set! found? #t)))))
