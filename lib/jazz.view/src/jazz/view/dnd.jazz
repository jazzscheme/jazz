(module jazz.view.dnd jazz


(import (jazz.view))


;;;
;;;; DnD
;;;


(class DnD extends Object
  
  
  (slot source initialize #f accessors generate)
  (slot target initialize #f accessors generate)
  (slot view   initialize #f accessors generate)
  
  
  (method override (initialize (source: source #f))
    (nextmethod)
    (set! source~self source))
  
  
  (method override (print output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{s} {s} {s}" source target view)))))


;;;
;;;; Drag-Source
;;;


(class Drag-Source extends Object
  
  
  (slot view     initialize #f getter generate)
  (slot position initialize #f getter generate)
  (slot image    initialize #f getter generate)
  
  
  (method override (initialize (view: view #f) (position: position #f) (image: image #f))
    (nextmethod)
    (set! view~self view)
    (set! position~self position)
    (set! image~self image))
  
  
  (method override (print output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{s} {s} {s}" view position image)))))


;;;
;;;; Drop-Event
;;;


(class Drop-Event extends Mouse-Event


  (slot drag-drop getter generate)


  (method override (initialize kind sender modifiers drag-drop . properties)
    (apply nextmethod kind sender modifiers properties)
    (set! drag-drop~self drag-drop)))


;;;
;;;; Drop-Target
;;;


(class Drop-Target extends Object
  
  
  (slot view      getter generate)
  (slot position  getter generate)
  (slot criteria  getter generate)
  (slot handler   getter generate)
  (slot user-data getter generate)
  
  
  (method override (initialize (view: view #f) (position: position #f) (criteria: criteria #f) (handler: handler #f) (user-data: user-data #f))
    (nextmethod)
    (set! view~self view)
    (set! position~self position)
    (set! criteria~self criteria)
    (set! handler~self handler)
    (set! user-data~self user-data))
  
  
  (method override (print output readably)
    (print-unreadable self output
      (lambda (output)
        (format output "{s}" view))))))
