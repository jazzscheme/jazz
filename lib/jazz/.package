(package jazz
  
  (root "src")
  (install jazz.install)
  (products (jazz (test jazz.validate.run)
                  (update jazz
                          jazz.development
                          jazz.install
                          jazz.literals
                          jazz.validate)
                  (dependencies scheme))
            (test (title "Test")
                  (unit jazz.test.product)
                  (update jazz.test)
                  (run jazz.test.run))
            (walk (run jazz.script.walk))
            (preinstalled (dependencies jazz
                                        jazz.catalog
                                        jazz.console
                                        jazz.database
                                        (cond
                                          (windows jazz.database.ado
                                                   jazz.database.sqlserver))
                                        jazz.debuggee
                                        jazz.debugger
                                        jazz.debugger.gambit
                                        jazz.debugger.jazz
                                        jazz.designer
                                        jazz.detprof
                                        jazz.doc
                                        jazz.git
                                        jazz.graphic
                                        jazz.groupware
                                        jazz.ide
                                        jazz.io
                                        jazz.jml
                                        jazz.jrm
                                        jazz.editor.c
                                        jazz.editor.commonlisp
                                        jazz.editor.diff
                                        jazz.editor.jazz
                                        jazz.editor.scheme
                                        jazz.editor.sql
                                        jazz.editor.tex
                                        jazz.library
                                        jazz.media
                                        jazz.network
                                        jazz.platform
                                        jazz.profile
                                        jazz.project
                                        jazz.recorder
                                        jazz.schema
                                        jazz.system
                                        jazz.ui
                                        jazz.validation
                                        jazz.website
                                        gambit
                                        contrib.irregex
                                        contrib.statprof
                                        srfi-19
                                        profiler))
            (samples (dependencies jazz.sample
                                   jazz.sample.c4
                                   jazz.sample.fib
                                   jazz.sample.game
                                   jazz.sample.gameserver
                                   jazz.sample.gomoku
                                   jazz.sample.mandelbrot
                                   jazz.sample.paradigms
                                   jazz.sample.world))
            (all (dependencies preinstalled
                               samples)))
  (project ".project"))
