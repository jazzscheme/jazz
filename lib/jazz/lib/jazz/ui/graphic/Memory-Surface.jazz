(library jazz.ui.graphic.Memory-Surface jazz


(import (jazz.ui)
        (jazz.platform.cairo)
        (jazz.literals)
        (jazz.library))


(class Memory-Surface extends Surface
  
  
  (slot size)
  
  
  (method (initialize compatibility-dc (size: size {Dimension 10 10}))
    (let* ((surface (cairo_image_surface_create 0 (get-width~ size) (get-height~ size))))
      (nextmethod surface)
      (set! size~self size)))
  

  (method (get-size)
    size)))
