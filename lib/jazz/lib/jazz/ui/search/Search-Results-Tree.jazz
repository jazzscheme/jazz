(library jazz.ui.search.Search-Results-Tree jazz


(import (jazz.ui)
        (jazz.ui.clipboard)
        (jazz.library)
        (jazz.utilities))


(class Search-Results-Tree extends Tree-View
          

  ;;;
  ;;;; Actions
  ;;;
  

  (method (focus-actions)
    (cons (find-actions 'search-results-tree)
          (nextmethod)))
  
  
  ;;;
  ;;;; Access
  ;;;
  
  
  (method (get-search)
    (find-ascendant Search-Results))
  
  
  ;;;
  ;;;; Events
  ;;;
  
  
  (method (return-press key)
    (edit-selection~ (get-search) #t))
  
  
  (method (copy-selection)
    (set-clipboard-text
      (format "{l detail: :human}"
        (map (function (n)
               (present-info~ (get-search) (get-user-data~ (get-row n))))
             (get-selection)))))
  
  
  (method (select-all . rest)
    )
  
  
  (method (on-edit-definition evt)
    (edit-selection~ (get-search) #t))
  
  
  (method (on-touch-files evt)
    (touch-selection~ (get-search)))
  
  
  (method (update-row row)
    (update-tree-row~ (get-search) row))))
