(module protected jazz.validate.suite.Function-Tester jazz


(import (jazz.jml)
        (jazz.validation))


(class Function-Tester extends Tester
  
  
  (form
    (<install> title: "Function"))
  
  
  @convert (


  (method override (test self)
    (invoke self "Dynamic Closure" test-dynamic-closure)
    (invoke self "Indefinite extent" test-indefinite-extent)
    @wait-outer-binding
    (invoke self "Outer Binding" test-outer-binding)
    (invoke self "Rest Binding" test-rest-binding)
    (invoke self "Function" test-function)
    (invoke self "Recursivity" test-recursivity))
  
  
  ;;;
  ;;;; Dynamic Closure
  ;;;


  (method (add self x list)
    (map (lambda (y)
           (+ x y))
         list))

  
  (method (test-dynamic-closure self)
    (check (= (add 10 '(1 2 3)) '(11 12 13))))
  
  
  ;;;
  ;;;; Indefinite extent
  ;;;


  (method (adder self x)
    (lambda (n)
      (+ n x)))

  
  (definition add10
    (adder 10))
  
  
  (method (foo self x)
    (let ((y (+ x x)))
      (lambda (n)
        (+ n x y))))
  
  
  (definition foo5
    (foo 5))
    
  
  (definition holder
    #f)

  
  (method (bar self)
    (set! holder #f)
    (let ((proc
           (lambda (n flag)
             (let ((p
                    (lambda ()
                      n)))
               (if flag p (holder))))))
      (set! holder (proc 5 #t))
      (proc 7 #f)))

  
  (method (test-indefinite-extent self)
    (check (= (map add10 '(1 2 3)) '(11 12 13)))
    (check (= (map foo5 '(1 2 3)) '(16 17 18)))
    (check (= (bar) 5)))
  
  
  ;;;
  ;;;; Outer Binding
  ;;;


  @wait-outer-binding
  (let ((x 0))
    (method (count self)
      (prog1 x
        (increase! x))))

  
  @wait-outer-binding
  (method (test-outer-binding self)
    (check (= (count) 0))
    (check (= (count) 1))
    (check (= (count) 2))
    (check (= (count) 3)))
  
  
  ;;;
  ;;;; Rest Binding
  ;;;

  
  (method (yoo self . rest)
    (let ((x 10))
      (cons x rest)))
  
  
  (method (test-rest-binding self)
    (check (= (yoo 1 2 3) '(10 1 2 3))))
  
  
  ;;;
  ;;;; Function
  ;;;


  (method (with-proc self proc)
    (proc 2 3))
  
  
  (method (fn self a b c)
    (* a b c))
  
  
  (method (test-with self z)
    (with-proc
      (lambda (x y)
        (fn x y z))))
  
  
  (method (test-function self)
    (check (= ((lambda (w) (test-with w)) 5) 30)))
  
  
  ;;;
  ;;;; Recursivity
  ;;;


  (method (fact self n)
    (if (= n 0)
        1
      (* n (fact (- n 1)))))
  
  
  (method (test-recursivity self)
    (check (= (fact 5) 120))))))
