(module protected jazz.validate.suite.Number-Tester jazz


(import (jazz.jml)
        (jazz.validation))


(class Number-Tester extends Tester
  
  
  (form
    (<install> title: "Number"))


  (method override (test)
    (invoke "Number" test-number)
    (invoke "Bit" test-bit))
  
  
  ;;;
  ;;;; Number
  ;;;


  (method (test-number)
    (validate (= 0 (+)))
    (validate (= 5 (+ 1 1 3)))
    
    (validate (= (- 2) -2))
    (validate (= (- 3.5) -3.5))
    (validate (= (- 10 3.2) 6.8))
    (validate (= (- 10 3 2 1) 4))
  
    (validate (= 1 (*)))
    (validate (= 60 (* 1 1 3 4 5)))
    
    (validate (= (/ 4) 0.25))
    (validate (= (/ 3 0.25) 12))
    (validate (= (/ 24 2 2 2) 3))
  
    @Compiled-Waiting
    (validate (=))
    @Compiled-Waiting
    (validate (= 1))
    (validate (= 1 1 1 1))
    (validate (not (= 1 1 2 1)))
  
    @Compiled-Waiting
    (validate (not (/=)))
    @Compiled-Waiting
    (validate (not (/= 1)))
    (validate (not (/= 1 1)))
    (validate (/= 1 2))
  
    @Compiled-Waiting
    (validate (< 1))
    (validate (< 1 2 3 6))
    (validate (not (< 1 1)))
    (validate (not (< 1 4 2)))
  
    (validate (= (max 1) 1))
    (validate (= (max 1 7 4 3 8 2) 8))
    (validate (= (max 8 1 7 4 3 2) 8))
    (validate (= (max 1 7 4 3 2 8) 8))
    (validate (= (min 1) 1))
    (validate (= (min 7 4 3 1 8 2) 1))
    (validate (= (min 1 7 4 3 8 2) 1))
    (validate (= (min 7 4 3 8 2 1) 1))
    
    @Interpreted
    (begin
      (validate (error? (-)))
      (validate (error? (/)))
      
      (validate (error? (max)))
      (validate (error? (min)))))
  
  
  ;;;
  ;;;; Bit
  ;;;


  (method (test-bit)
    (validate (= (bitwise-and 5) 5))
    (validate (= (bitwise-and 1 4) 0))
    (validate (= (bitwise-and 6 14 2) 2))
    (validate (= (bitwise-ior 5) 5))
    (validate (= (bitwise-ior 6 1) 7)))))
