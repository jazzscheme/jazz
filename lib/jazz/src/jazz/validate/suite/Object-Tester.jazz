(library protected jazz.validate.suite.Object-Tester jazz


(import (jazz.jml)
        (jazz.validate)
        (jazz.validation))


(class Object-Tester extends Tester
  
  
  (form
    (<install> title: "Object"))
  
  
  @convert (


  (method (test)
    (invoke "Definition" test-definition)
    (invoke "Slot" test-slot)
    (invoke "Self" test-self)
    (invoke "Super" test-super)
    (invoke "Reference" test-reference)
    (invoke "Inheritance" test-inheritance)
    (invoke "Interface" test-interface)
    (invoke "Inner" test-inner)
    (invoke "Meta" test-meta))
  
  
  ;;;
  ;;;; Definition
  ;;;


  (method (test-definition)
    )
  
  
  ;;;
  ;;;; Slot
  ;;;


  (method (test-slot)
    )
  
  
  ;;;
  ;;;; Self
  ;;;


  (method (test-self)
    )
  
  
  ;;;
  ;;;; Super
  ;;;


  (method (test-super)
    )
  
  
  ;;;
  ;;;; Reference
  ;;;


  (method (test-reference)
    )
  
  
  ;;;
  ;;;; Inheritance
  ;;;


  (method (test-inheritance)
    )
  
  
  ;;;
  ;;;; Interface
  ;;;


  (method (test-interface)
    )
  
  
  ;;;
  ;;;; Inner
  ;;;


  (method (test-inner)
    )
  
  
  ;;;
  ;;;; Meta
  ;;;


  (method (test-meta)
    )))
  
  
@convert (


;;       X
;;      / \
;;     Y   W
;;    /
;;   Z


(class X extends Object
  
  (definition public virtual foo 10)
  (definition goo 15)
  
  (slot bar initialize 5)
  
  (method public (toto)
    bar)
  
  (method public (tutu x)
    (* x bar))
  
  (method public (tata)
    X2)
  
  (method public (yuyu)
    (let ((bar 11))
      (list bar bar~self)))
  
  (method public (yiyi)
    (let ((bar 11))
      (set! bar 12)
      (set! bar~self 7)
      (list bar bar~self))))


(class Y extends X
  
  (definition public foo 20)
  
  (method public virtual (bah x)
    x))


(class Z extends Y
  
  (method (bah x)
    (+ x x)))


(class W extends X
  
  (slot hoo initialize (new Cell 0 0)))


(method (test-part1)
  (validate rpt (neq? (get-hoo~ (new W)) (get-hoo~ (new W))))
  
  (validate rpt W)
  (validate rpt Y)
  (validate rpt Z)
  
  @Interpreted
  (begin
    (validate rpt (error? (get-goo~ Z))))
  
  (validate rpt (= (get-foo~ (new X)) 10)))


(definition public X1 {})
(definition public X2 {})


(method (call-bah obj x)
  (bah~ obj x))

(method (call-bah2 obj x)
  (bah~ obj x))


(method (test-part2)
  (set! X1 (new X))
  (set! X2 (new X))
  
  (validate rpt (= (get-foo~ X1) 10))
  (validate rpt (= (get-bar~ X1) 5))
  (validate rpt (= (get-bar~ X2) 5))
  
  (set-bar~ X1 6)
  (set-bar~ X2 7)
  (validate rpt (= (get-bar~ X1) 6))
  (validate rpt (= (get-bar~ X2) 7))
  
  (validate rpt (= (toto~ X1) 6))
  (validate rpt (= (tutu~ (tata~ X1) 4) 28))
  
  (validate rpt (equal? (yuyu~ X1) '(11 6)))
  
  (validate rpt (equal? (yiyi~ X1) '(12 7)))
  
  (validate rpt (= (call-bah (new Y) 5) 5))
  (validate rpt (= (call-bah (new Z) 5) 10))
  
  (validate rpt (= (call-bah2 (new Z) 5) 10))
  (validate rpt (= (call-bah2 (new Y) 5) 5))
  
  @Interpreted
  (begin
    (validate rpt (error? (call-bah (new X) 5)))
    (validate rpt (error? (call-bah2 (new X) 5)))))


(method (test-part3)
  (set! mm 7)
  (validate rpt (= (list mm (foo~ (new I))) '(7 2)))
  (validate rpt (= (bar~ (mak~ (new I))) '(9 (9 6) (9 15) (9)))))


;;;
;;;; Inner and Meta classes
;;;


(slot meta mm initialize 5)


(slot aa initialize 2)


(method (f . rest)
  (list aa (apply + rest)))


(method protected virtual (v)
  (list aa))


(class I extends Object
  
  
  (method public (foo)
    aa)
  
  
  (method public (mak)
    (new J)))


(class J extends Object
  
  
  (method public (bar)
    (set! aa 9)
    (list aa (f 1 2 3) (apply f '(4 5 6)) (v)))))
)