(library jazz.validate.suite.Sequence-Tester jazz


(import (jazz.jml)
        (jazz.library)
        (jazz.validate))


(class Sequence-Tester extends Tester
  
  
  (form
    (<install> title: "Sequence"))


  (method (test)
    (invoke {} test-sequence))
  
  
  ;;;
  ;;;; Sequence
  ;;;


  (definition aaa
    "hello")
  
  
  (method (test-sequence)
    (validate rpt (equal? (count 3 '(1 3 2 5 3 3 3)) 4))
    (validate rpt (equal? (count-if even? '(1 2 4 6 7 8)) 4))
    (validate rpt (equal? (find-in '((william 4) (mark 3) (denise 6)) 'mark key: car) '(mark 3)))
    (validate rpt (equal? (find '((william 4) (mark 3) (denise 6)) 'denise key: car) 2))
    (validate rpt (equal? (find "Hello" #\o) 4))
    (validate rpt (equal? (find-if odd? '((william 4) (mark 3) (denise 6)) key: cadr) '(mark 3)))
    (validate rpt (equal? (find-if numeric? "There was 3 little pigs in 5 fields" reversed?: #t) #\5))
    (validate rpt (equal? (find-if numeric? "There was 3 little pigs in 5 fields" start: 15 reversed?: #t) #\3))
    (validate rpt (some? even? '(1 3 5 6 9)))
    (validate rpt (not (some? even? '(1 7 9))))
    (validate rpt (every? even? '(2 6 8)))
    (validate rpt (not (every? even? '(2 4 5 8))))
    (validate rpt (equal? (collect-if upper-case? "Hello Les Copains") "HLC"))
    (validate rpt (equal? (subseq '(a b c d e) 1 4) '(b c d)))
    (validate rpt (equal? (subseq '(#\h #\e #\l #\l #\o) 1 3 String) "el"))
    (validate rpt (equal? (mismatch "Hello" "Hey") 2))
    (validate rpt (equal? (mismatch "Hello" "He") 2))
    (validate rpt (equal? (mismatch "He" "Hello") 2))
    (validate rpt (not (mismatch "Hello" "Hello")))
    (validate rpt (prefix? "ll" "llo"))
    (validate rpt (not (prefix? "hello" "hel")))
    (validate rpt (not (prefix? "ab" "hel")))
    (validate rpt (equal? (search "Hello" "ll") 2))
    (validate rpt (not (search "Hello" "ab")))
    (validate rpt (equal? (map even? '(1 2 3 4 6)) '(#f #t #f #t #t)))
    (validate rpt (equal? (accumulate '(#\a #\b #\c) identity String) "abc"))
    (validate rpt (equal? (split "Hello les copains" " ") '("Hello" "les" "copains")))
    (validate rpt (equal? (split "Hello les copains " " ") '("Hello" "les" "copains" "")))
    (validate rpt (equal? (split "Hello" " ") '("Hello")))
    (validate rpt (equal? (split "" " ") '("")))
    (validate rpt (equal? (split "a" "a") '("" "")))
    (validate rpt (equal? (split "Hello+=les+=copains" "+=") '("Hello" "les" "copains")))
    (validate rpt (equal? (join '("Hello" "les" "copains") " ") "Hello les copains"))
    (validate rpt (equal? (substitute 'a 'b '(a b c a a d e)) '(b b c b b d e)))
    (validate rpt (equal? (substitute #\l "ti" "Hello" sequence?: #t) "Hetitio"))
    (validate rpt (equal? (fill! "Hello" #\a) "aaaaa"))
    (validate rpt (equal? (fill! "Hello" #\a start: 2) "Heaaa"))
    (validate rpt (equal? (replace! "Hello" "Bon") "Bonlo"))
    (validate rpt (equal? (replace! "Hello" "Bon" start: 3) "HelBo"))
    (validate rpt (equal? (insert! "Hello" 0 #\a) "aHello"))
    (validate rpt (equal? (insert! "Hello" 2 #\a) "Heallo"))
    (validate rpt (equal? (insert! "Hello" 5 #\a) "Helloa"))
    (validate rpt (equal? (replace-subseq! "Hello" 2 4 "bonjour") "Hebonjouro"))
    (validate rpt (equal? (replace-subseq! "Hello" 2 2 "abc") "Heabcllo"))
    (validate rpt (equal? (replace-subseq! "" 0 0 "a") "a"))
    @wait
    (validate rpt (eq? (car (split aaa " ")) aaa))
    @wait
    (validate rpt (eq? (join (list aaa) " ") aaa)))))
