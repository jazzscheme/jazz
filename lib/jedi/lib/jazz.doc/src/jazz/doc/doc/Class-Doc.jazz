(module protected jazz.doc.doc.Class-Doc jazz


(import (jazz.doc)
        (jazz.library))


(class Class-Doc extends Category-Doc
  
  
  (property ascendant  initialize {}  accessors generate)
  (property interfaces initialize '() accessors generate)
  
  
  ;;;
  ;;;; Catalog
  ;;;
  
  
  @what-is-doc???
  (method (print-catalog level printer)
    (format printer "{%}{_ :v}~{{s} {s} {s} {s} {s}"
            (* level 2)
            (category-name (class-of self))
            name ascendant interfaces doc)
    (for-each (lambda (child)
                (print-catalog~ child (+ level 1) printer))
              children)
    (format printer "}"))


  ;;;
  ;;;; Presentation
  ;;;
  
  
  (method override (present)
    (format "{a}" name))
  
  
  ;;;
  ;;;; Descriptor
  ;;;
  
  
  (method meta override (get-class-descriptor)
    (new Class-Doc-Descriptor)))


;;;
;;;; Design
;;;


(submodule design


(import (jazz.designer))


(class Class-Doc-Descriptor extends Category-Doc-Descriptor
  
  
  (method override (class-image class)
    {Image-Resource "Class"})
  
  
  (method override (class-property-presentation class property)
    (case (field-name property)
      ((ascendant) "Ascendant")
      ((interfaces) "Interfaces")
      (else (nextmethod class property))))
  
  
  (method override (component-get-categorized-properties component)
    '(package-name ascendant interfaces)))))
