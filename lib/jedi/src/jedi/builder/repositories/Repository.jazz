(library protected jedi.builder.repositories.Repository jazz


(import (jazz.designer)
        (jazz.library)
        (jedi))


(class Repository extends Component
  
  
  (property title     initialize {} accessors generate)
  (property directory initialize {} accessors generate)
  
  
  (method override (print printer readably)
    (print-unreadable self printer
      (lambda (printer)
        (format printer "{a}"
                title))))


  ;;;
  ;;;; Designer
  ;;;
  
  
  (method meta override (get-class-image)
    {Bitmap-Resource "CompareManager"})
  
  
  (method meta override (property-presentation property)
    (case (field-name property)
      ((title) "Title")
      ((directory) "Directory")
      (else (nextmethod property))))
  
  
  (method override (presentation-property? property)
    (memq? (field-name property) '(title)))
  
  
  (method override (get-presentation)
    title)
  
  
  (method override (set-presentation designer presentation)
    (set-property~ designer self title: presentation))
  
  
  (method override (addable-class? class)
    (or (subtype? class Project-File)
        (subtype? class Project-Group)))
  
  
  (method override (get-addable-classes)
    (list
      Project-Group))
  
  
  (method override (get-row-instance property)
    (case (field-name property)
      ((directory) (new Directory-Row))
      (else (nextmethod property))))
  
  
  (method override (get-categorized-properties)
    '(directory))))
