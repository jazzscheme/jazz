(library jedi.preference.Jedi-Bindings jazz


(import (jedi)
        (jazz.doc)
        (jazz.ide)
        (jazz.jml)
        (jazz.library)
        (jazz.literals)
        (jazz.platform)
        (jazz.ui))


(class Jedi-Bindings extends IDE-Bindings
  
  
  (form
    (<install>
      (<Jedi-Actions>                      name: jedi)
      (<Code-Text-Actions>                 name: code-text)
      (<Lisp-Text-Actions>                 name: lisp-text)
      (<Jazz-Text-Actions>                 name: jazz-text)
      (<Command-Execute-Actions>           name: command-execute)
      (<Command-Search-Actions>            name: command-search)
      (<Console-Text-Actions>              name: console-text)
      (<Combo-Text-Actions>                name: combo-text)
      (<Compare-Text-Actions>              name: compare-text)
      (<Composite-Text-Actions>            name: composite-text)
      (<Formatted-Text-Actions>            name: formatted-text)
      (<Scheme-Text-Actions>               name: scheme-text)
      (<Tree-Embedded-Search-Text-Actions> name: tree-embedded-search-text)
      (<Components-Viewer-Actions>         name: components-viewer)
      (<Components-Tree-Actions>           name: components-tree)
      (<Entities-Tree-Actions>             name: entities-tree)
      (<Web-Servers-Actions>               name: web-servers)
      (<Workbench-Tree-Actions>            name: workbench-tree)
      (<Workbench-Manager-Actions>         name: workbench-manager)
      (<Manager-Actions>                   name: manager)
      (<Class-Browser-Actions>             name: class-browser)
      (<Compare-Trees-Actions>             name: compare-trees)
      (<Search-Manager-Actions>            name: search-manager)
      (<Search-Results-Tree-Actions>       name: search-results-tree)
      (<View-Editor-Actions>               name: view-editor)
      (<Preview-Pane-Actions>              name: preview-pane)
      
      ;;;
      ;;;; jazz
      ;;;
      
      (<Branch>           name: jazz
        (<install>
          (<application~>
            (<!>          name: paste-from-stack             shortcut: {Shortcut :alt #\V})
            (<!>          name: pop-clipboard-stack          shortcut: {Shortcut :alt :shift #\V})
            (<!>          name: find                         shortcut: {Shortcut :control :alt #\F}))
          (<jedi~>
            (<!>          name: bindings-manager             shortcut: {Shortcut :control :alt #\B})
            (<!>          name: view-bindings                shortcut: {Shortcut :control :shift #\B}))
          (<view~>
            (<!>          name: select-all                   shortcut: {Shortcut :control #\A}))
          (<text~>
            (<!>          name: move-backward-char-aux       shortcut: {Shortcut :control #\J})
            (<!>          name: extend-backward-char-aux     shortcut: {Shortcut :control :shift #\J})
            (<!>          name: move-backward-word-aux       shortcut: {Shortcut :alt #\J})
            (<!>          name: extend-backward-word-aux     shortcut: {Shortcut :alt :shift #\J})
            (<!>          name: backward-compound-aux        shortcut: {Shortcut :control :alt #\J})
            (<!>          name: move-forward-char-aux        shortcut: {Shortcut :control #\L})
            (<!>          name: extend-forward-char-aux      shortcut: {Shortcut :control :shift #\L})
            (<!>          name: move-forward-word-aux        shortcut: {Shortcut :alt #\L})
            (<!>          name: extend-forward-word-aux      shortcut: {Shortcut :alt :shift #\L})
            (<!>          name: forward-compound-aux         shortcut: {Shortcut :control :alt #\L})
            (<!>          name: move-upward-aux              shortcut: {Shortcut :control #\I})
            (<!>          name: extend-upward-aux            shortcut: {Shortcut :control :shift #\I})
            (<!>          name: move-downward-aux            shortcut: {Shortcut :control #\K})
            (<!>          name: extend-downward-aux          shortcut: {Shortcut :control :shift #\K})
            (<!>          name: upward-compound-aux          shortcut: {Shortcut :alt #\I})
            (<!>          name: downward-compound-aux        shortcut: {Shortcut :alt #\K})
            (<!>          name: delete-char-aux              shortcut: {Shortcut :control #\D})
            (<!>          name: delete-word-aux              shortcut: {Shortcut :alt #\D})
            (<!>          name: kill-line                    shortcut: {Shortcut :control #\O})
            (<!>          name: home-aux                     shortcut: {Shortcut :control #\;})
            (<!>          name: extend-home-aux              shortcut: {Shortcut :control :shift #\;})
            (<!>          name: end-aux                      shortcut: {Shortcut :control #\'})
            (<!>          name: extend-end-aux               shortcut: {Shortcut :control :shift #\'})
            (<!>          name: document-home-aux            shortcut: {Shortcut :alt :shift #\,})
            (<!>          name: document-end-aux             shortcut: {Shortcut :alt :shift #\.})
            (<!>          name: prior-aux                    shortcut: {Shortcut :alt #\N})
            (<!>          name: next-aux                     shortcut: {Shortcut :control #\N})
            (<!>          name: center-caret                 shortcut: {Shortcut :control #\P})
            (<!>          name: find-forward                 shortcut: {Shortcut :control #\F})
            (<!>          name: find-backward                shortcut: {Shortcut :control :shift #\F}))
          (<code-text~>
            (<!>          name: edit-definitions-aux         shortcut: {Shortcut :alt #\.})
            (<!>          name: edit-references-aux          shortcut: {Shortcut :control :alt #\.}))
          (<console-text~>
            (<!>          name: insert-previous-aux          shortcut: {Shortcut :control #\I})
            (<!>          name: insert-next-aux              shortcut: {Shortcut :control #\K}))
          (<tree~>
            (<!>          name: move-upward-aux              shortcut: {Shortcut :control #\I})
            (<!>          name: move-downward-aux            shortcut: {Shortcut :control #\K})
            (<!>          name: home-aux                     shortcut: {Shortcut :alt :shift #\,})
            (<!>          name: end-aux                      shortcut: {Shortcut :alt :shift #\.})
            (<!>          name: prior-aux                    shortcut: {Shortcut :alt #\N})
            (<!>          name: next-aux                     shortcut: {Shortcut :control #\N}))))
      
      
      ;;;
      ;;;; emacs
      ;;;
      
      (<Branch>           name: emacs
        (<install>
          (<application~>
            (<!>          name: paste-from-stack             shortcut: {Shortcut :alt #\Y}))
          (<view~>
            (<!>          name: undo                         shortcut: {Shortcut :control :shift #\-})
            (<!>          name: undo-aux                     shortcut: {Shortcut :control #\/})
            (<!>          name: cut                          shortcut: {Shortcut :control #\W})
            (<!>          name: copy                         shortcut: {Shortcut :alt #\W})
            (<!>          name: paste                        shortcut: {Shortcut :control #\Y})
            (<!>          name: select-all                   shortcut: {Shortcut :control :alt #\A}))
          (<text~>
            (<!>          name: move-backward-char-aux       shortcut: {Shortcut :control #\B})
            (<!>          name: extend-backward-char-aux     shortcut: {Shortcut :control :shift #\B})
            (<!>          name: move-backward-word-aux       shortcut: {Shortcut :alt #\B})
            (<!>          name: extend-backward-word-aux     shortcut: {Shortcut :alt :shift #\B})
            (<!>          name: backward-compound-aux        shortcut: {Shortcut :control :alt #\B})
            (<!>          name: extend-backward-compound-aux shortcut: {Shortcut :control :alt :shift #\B})
            (<!>          name: move-forward-char-aux        shortcut: {Shortcut :control #\F})
            (<!>          name: extend-forward-char-aux      shortcut: {Shortcut :control :shift #\F})
            (<!>          name: move-forward-word-aux        shortcut: {Shortcut :alt #\F})
            (<!>          name: extend-forward-word-aux      shortcut: {Shortcut :alt :shift #\F})
            (<!>          name: forward-compound-aux         shortcut: {Shortcut :control :alt #\F})
            (<!>          name: extend-forward-compound-aux  shortcut: {Shortcut :control :alt :shift #\F})
            (<!>          name: move-upward-aux              shortcut: {Shortcut :control #\P})
            (<!>          name: extend-upward-aux            shortcut: {Shortcut :control :shift #\P})
            (<!>          name: move-downward-aux            shortcut: {Shortcut :control #\N})
            (<!>          name: extend-downward-aux          shortcut: {Shortcut :control :shift #\N})
            (<!>          name: upward-compound-aux          shortcut: {Shortcut :alt #\P})
            (<!>          name: downward-compound-aux        shortcut: {Shortcut :alt #\N})
            (<!>          name: delete-char-aux              shortcut: {Shortcut :control #\D})
            (<!>          name: delete-word-aux              shortcut: {Shortcut :alt #\D})
            (<!>          name: kill-line                    shortcut: {Shortcut :control #\K})
            (<!>          name: home-aux                     shortcut: {Shortcut :control #\A})
            (<!>          name: extend-home-aux              shortcut: {Shortcut :control :shift #\A})
            (<!>          name: end-aux                      shortcut: {Shortcut :control #\E})
            (<!>          name: extend-end-aux               shortcut: {Shortcut :control :shift #\E})
            (<!>          name: document-home-aux            shortcut: {Shortcut :alt :shift #\,})
            (<!>          name: document-end-aux             shortcut: {Shortcut :alt :shift #\.})
            (<!>          name: prior-aux                    shortcut: {Shortcut :alt #\V})
            (<!>          name: next-aux                     shortcut: {Shortcut :control #\V}))
          (<code-text~>
            (<!>          name: edit-definitions-aux         shortcut: {Shortcut :alt #\.})
            (<!>          name: edit-references-aux          shortcut: {Shortcut :control :alt #\.}))
          (<console-text~>
            (<!>          name: insert-previous-aux          shortcut: {Shortcut :control #\P})
            (<!>          name: insert-next-aux              shortcut: {Shortcut :control #\N}))
          (<tree~>
            (<!>          name: move-upward-aux              shortcut: {Shortcut :control #\P})
            (<!>          name: move-downward-aux            shortcut: {Shortcut :control #\N})
            (<!>          name: home-aux                     shortcut: {Shortcut :alt :shift #\,})
            (<!>          name: end-aux                      shortcut: {Shortcut :alt :shift #\.})
            (<!>          name: prior-aux                    shortcut: {Shortcut :alt #\V})
            (<!>          name: next-aux                     shortcut: {Shortcut :control #\V}))))
      
      
      ;;;
      ;;;; mac
      ;;;

      (<Branch>           name: mac
        (<install>))
      
      
      ;;;
      ;;;; windows
      ;;;
      
      (<Branch>           name: windows
        (<install>
          (<application~>
            (<!>          name: new                          shortcut: {Shortcut :control #\N})
            (<!>          name: close                        shortcut: {Shortcut :control F4})
            (<!>          name: print                        shortcut: {Shortcut :control #\P})
            (<!>          name: print-layout                 shortcut: {Shortcut :control :shift #\P})
            (<!>          name: print-preview                shortcut: {Shortcut :alt #\P})
            (<!>          name: exit                         shortcut: {Shortcut :alt F4})
            (<!>          name: find                         shortcut: {Shortcut :control #\F})
            (<!>          name: next-frame                   shortcut: {Shortcut :control F6})
            (<!>          name: previous-frame               shortcut: {Shortcut :control :shift F6})
            (<!>          name: current-frame                shortcut: {Shortcut F6}))
          (<guest~>
            (<!>          name: save                         shortcut: {Shortcut :control #\S}))
          (<view~>
            (<!>          name: redo                         shortcut: {Shortcut :control #\Y}))))))))
