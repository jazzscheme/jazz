          (<Project-File>                 source: {File Jazz "kernel" "runtime" "settings.scm"}))
        (<Project-Group>  name: "syntax"
          (<Project-File>                 source: {File Jazz "kernel" "syntax" "declares.scm"})
          (<Project-File>                 source: {File Jazz "kernel" "syntax" "features.scm"})
          (<Project-File>                 source: {File Jazz "kernel" "syntax" "macros.scm"})
          (<Project-File>                 source: {File Jazz "kernel" "syntax" "primitives.scm"})
          (<Project-File>                 source: {File Jazz "kernel" "syntax" "runtime.scm"})
          (<Project-File>                 source: {File Jazz "kernel" "syntax" "syntax.scm"}))
        (<Project-File>                   source: {File Jazz "kernel" "boot.scm"})
        (<Project-File>                   source: {File Jazz "kernel" "build.scm"})))))


(register-autoclass Kernel-Project))
