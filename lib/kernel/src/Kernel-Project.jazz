(import (jazz.builder)
        (jazz.io)
        (jazz.jml)
        (jazz.library)
        (jazz.literals))


(class Kernel-Project extends Project
  
  
  (form
    (<install>                            title: "kernel" catalog?: #t catalog-extensions: :jazz include-extensions: :jazz
      (<Project-Group>    name: "kernel"
        (<Project-Group>  name: "runtime"
          (<Project-File>                 source: {File Jazz "kernel" "runtime" "build.scm"})
          (<Project-File>                 source: {File Jazz "kernel" "runtime" "digest.scm"})
          (<Project-File>                 source: {File Jazz "kernel" "runtime" "install.scm"})
