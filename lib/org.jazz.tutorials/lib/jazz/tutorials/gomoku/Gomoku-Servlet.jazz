(library jazz.tutorials.gomoku.Gomoku-Servlet jazz


(import (jazz.jml)
        (jazz.network)
        (jazz.utilities))


(class Gomoku-Servlet extends HTTP-Servlet
  
  
  (definition Pattern-Associations
    '(("Gomoku" (<gomoku>))))
  
  
  (method (get-pattern-associations)
    Pattern-Associations)
  
  
  ;;;
  ;;;; Gomoku
  ;;;
  
  
  (pattern (gomoku node)
    (let ((a 2))
    `(<html>
       (<head>
         (<link> href: "css/master.css" rel: "stylesheet" type: "text/css")
         (<script> type: "text/javascript" src: "scripts/client.js")
         (<title> "Gomoku"))
       (<body> background: "backgrounds/wood.jpg"
         (<h3> "Gomoku")
         @w
         (<form> name: "Form" method: "POST"
           (<input> type: "hidden" name: "h1" value: "v1")
           (<input> type: "submit"))
         (<table> cellspacing: "0" cellpadding: "0"
           (<tr>
             (<td> (<a> href: "#" onclick: "submitForm('Form', 'Gomoku');" (<img> src: "images/white_lefttop.png")))
             (<td> (<a> href: "Gomoku" (<img> src: "images/black_top.png")))
             (<td> (<a> href: "Gomoku" (<img> src: "images/black_righttop.png"))))
           (<tr>
             (<td> (<img> src: "images/black_left.png"))
             (<td> (<img> src: "images/empty_center.png"))
             (<td> (<img> src: "images/white_right.png")))
           (<tr>
             (<td> (<img> src: "images/white_leftbottom.png"))
             (<td> (<img> src: "images/white_bottom.png"))
             (<td> (<img> src: "images/black_rightbottom.png"))))
         @w
         ,@(debug-info)))))))
