(library jazz.debuggee.Debuggee-Stop jazz


(import (jazz.debuggee)
        (jazz.debuggee.stub))


(class Debuggee-Stop extends Object
  
  
  (slot thread       accessors generate)
  (slot kind         accessors generate)
  (slot reason       accessors generate)
  (slot details      accessors generate)
  (slot continuation accessors generate)
  (slot restarts     accessors generate)
  (slot stack        accessors generate)
  
  
  (method (initialize thread kind reason details continuation restarts)
    (nextmethod)
    (set! thread~self thread)
    (set! kind~self kind)
    (set! reason~self reason)
    (set! details~self details)
    (set! continuation~self continuation)
    (set! restarts~self restarts)
    (set! stack~self (skip-system-frames (get-continuation-stack continuation #f))))
  
  
  (definition (skip-system-frames stack)
    ;; skip the ##dynamic-env-bind frame
    (cdr stack))
  
  
  (method public (get-id)
    (object->serial self))
  
  
  ;;;
  ;;;; Frames
  ;;;
  
  
  (method public (get-frames)
    (map (function (id frame)
           (get-frame-state id frame))
         (naturals 0 (length stack))
         stack))
  
  
  (definition (get-frame-state id frame)
    (bind (continuation name environment variables location) frame
      (let ((frame (new Debuggee-Frame id (object->serial continuation) name location (map get-variable-state variables))))
        (new Debuggee-Frame-Local-Proxy frame))))
  
  
  (definition (get-variable-state variable)
    (bind (name . value) variable
      (cons name (with-exception-catcher
                   (function (exc)
                     ;; add the exception reason somehow!?
                     "<unprintable object>")
                   (function ()
                     (->string value :reader))))))))
