(library jazz.ui.locale.Localized-Row jazz


(import (jazz.designer)
        (jazz.jml)
        (jazz.library)
        (jazz.ui)
        (jazz.utilities))


(class Localized-Row extends Value-Row
  
  
  (slot localized? initialize #f)
  
  
  ;;;
  ;;;; Presentation
  ;;;
  
  
  (method (present value)
    (if (is? value Locales)
        (format "{l}" (get-locales~ value))
      (format "{a}" value)))
  
  
  ;;;
  ;;;; Edition
  ;;;
  
  
  (method (get-edited-value)
    (if (not localized?)
        (get-string-content~ editor)
      (let ((fact (new List-Factory)))
        (iterate (get-sons)
                 (function (subrow)
                   (put~ fact (get-user-data~ subrow))
                   (put~ fact (get-value~ subrow))))
        (apply new Locales (get-output~ fact)))))
  
  
  (method (get-edited-modified?)
    (if (not localized?)
        (nextmethod)
      (get-list-edited-modified?)))
  
  
  (method (set-edited-modified? flag)
    (if (not localized?)
        (nextmethod flag)
      (set-list-edited-modified? flag)))
  
  
  (method (edit)
    (set! localized? (is? value Locales))
    (if (not localized?)
        (edit-in-cell)
      (for-each (function (locale)
                  (add-row self locale (get-locale~ value locale) class: Locale-Row user-data: locale))
                (get-locales)))
    (expand/collapse~ (get-tree) self))
  
  
  (method (select-editor)
    (when (is-not? value Locales)
      (nextmethod)))
  
  
  (method (close-editor)
    (if (not localized?)
        (close-in-cell-editor)
      (close-in-list-editor)))
  
  
  (method (in-edition?)
    (or (nextmethod)
        (and localized? (> (cardinality (get-sons)) 0))))
  
  
  ;;;
  ;;;; Menu
  ;;;
  
  
  (method (get-menu-class)
    Localized-Menu))


;;;
;;;; Localized-Menu
;;;


(class Localized-Menu extends Value-Menu
  
  
  (form
    (<install>
      (<Check-Item> name: localized title: "&Localized" icon: {Bitmap-Resource "Font"} action-handler: {Event-Handler :form on-toggle-localized})))
  
  
  (method (on-toggle-localized evt)
    )))
