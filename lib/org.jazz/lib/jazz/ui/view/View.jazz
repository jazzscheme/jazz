  ;;;
  ;;;; Destruction
  ;;;


  (method (destroy)
    (let ((parent parent)
          (rect (get-rect)))
      (when (eq? self (get-mouse-in))
        (set-mouse-in {})
        (call-mouse-leave))
      (nextmethod)
      (when (is? parent View)
        (invalidate-rect~ parent rect)
        (when player
          (view-destroyed~ player self)
          (set! player {})))))
    
  
