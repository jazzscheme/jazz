  ;;;; Player
  ;;;
  
  
  (method (get-player)
    (unless player
      (set! player (essay parent (get-player~ parent))))
    player)
  
  
  (method public (set-player plr)
    (set! player plr)
    (when (and (not plr) (eq? self (get-mouse-in)))
      (set-mouse-in {})
      (call-mouse-leave))
    (for-each-view
      (function (view)
        (set-player~ view player))))
  
  
