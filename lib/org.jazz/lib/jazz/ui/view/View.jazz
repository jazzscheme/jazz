  (method (get-lie-parent h <fl> v <fl> sc <fl>)
    (if (or (not parent) (not scaled?))
        (nextmethod h v sc)
      (get-lie-parent~ parent (+ (get-h~ position) (* h scaling)) (+ (get-v~ position) (* v scaling)) (* sc scaling))))

  
