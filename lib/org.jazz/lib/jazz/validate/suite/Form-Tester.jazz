(library jazz.validate.suite.Form-Tester jazz


(import (jazz.jml)
        (jazz.library)
        (jazz.validate))


(class Form-Tester extends Tester
  
  
  (form
    (<install> title: "Form"))


  (method (test-form)
    (invoke {} test-fields))
  
  
  ;;;
  ;;;; Form
  ;;;
  
  
  (method (test-fields)
    ;; temp patch because of install-properties
    (new X)
    (let ((form (get-class-form~ X)))
      (validate rpt (= (get-model-name~ form) 'X))
      (validate rpt (= (get-name~ form) {}))
      (validate rpt (= (get-properties~ form) (list (category-field X 'a) 2)))
      (validate rpt (= (length (get-children~ form)) 1)))))


;;;
;;;; Update
;;;


(class F extends Component
  
  
  (property f1 initialize {} getter get-f1 setter set-f1)
  
  
  (form
    (<install> f1: 2))
  
  
  (method (get-f1) f1)
  (method (set-f1 value) (set! f1 value)))


(class X extends Component
  
  
  (property x1 initialize {} getter get-x1 setter set-x1)
  (property x2 initialize {} getter get-x2 setter set-x2)
  
  
  (form
    (<install>          x1: 2 x2: 3
      (<F>     name: fa f1: 3)
      (<F>     name: fb f1: 4)
      (<F>     name: fc f1: 5)))
  
  
  (method (get-x1) x1)
  (method (set-x1 value) (set! x1 value))
  
  
  (method (get-x2) x2)
  (method (set-x2 value) (set! x2 value)))


(class Y extends X
  
  
  (form
    (<install> x2: 5))))
