      {Systype "NUMERIC" {} {} {} {}}
      {Systype "DECIMA" {} {} {} {}}
      {Systype "CHAR" {} {} {} {}}
      {Systype "VARCHAR" {} {} {} {}}
      {Systype "LONGVARCHAR" {} {} {} {}}
      {Systype "DATE" {} {} {} {}}
      {Systype "TIME" {} {} {} {}}
      {Systype "TIMESTAMP" {} {} {} {}}
      {Systype "BINARY" {} {} {} {}}
      {Systype "VARBINARY" {} {} {} {}}
      {Systype "LONGVARBINARY" {} {} {} {}}
      {Systype "NULL" {} {} {} {}}
      {Systype "OTHER" {} {} {} {}}
      {Systype "JAVA_OBJECT" {} {} {} {}}
      {Systype "DISTINCT" {} {} {} {}}
      {Systype "STRUCT" {} {} {} {}}
      {Systype "ARRAY" {} {} {} {}}
