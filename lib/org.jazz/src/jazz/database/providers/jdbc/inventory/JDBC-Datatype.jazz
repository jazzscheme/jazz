(library jazz.database.providers.jdbc.inventory.JDBC-Datatype jazz


(import (jazz.database)
        (jazz.library)
        (jazz.schema)
        (jazz.utilities))


(class JDBC-Datatype extends Datatype


  (c-enumeration meta DATATYPES
    (BIT              -7)
    (TINYINT          -6)
    (SMALLINT          5)
    (INTEGER           4)
    (BIGINT           -5)
    (FLOAT             6)
    (REAL              7)
    (DOUBLE            8)
    (NUMERIC           2)
    (DECIMA            3)
    (CHAR              1)
    (VARCHAR          12)
    (LONGVARCHAR      -1)
    (DATE             91)
    (TIME             92)
    (TIMESTAMP        93)
    (BINARY           -2)
    (VARBINARY        -3)
    (LONGVARBINARY    -4)
    (NULL              0)
    (OTHER          1111)
    (JAVA_OBJECT    2000)
    (DISTINCT       2001)
    (STRUCT         2002)
    (ARRAY          2003)
    (BLOB           2004)
    (CLOB           2005)
    (REF            2006)
    (DATALINK         70)
    (BOOLEAN          16))
  
  
  (method meta public (datatype-name no)
    (symbol->string (value->name~ DATATYPES no)))
  
  
  (method meta (get-systypes)
    '({Systype "BIT" {} {} {} {}}
      {Systype "TINYINT" {} {} {} {}}
      {Systype "SMALLINT" {} {} {} {}}
      {Systype "INTEGER" {} {} {} {}}
      {Systype "BIGINT" {} {} {} {}}
      {Systype "FLOAT" {} {} {} {}}
      {Systype "REAL" {} {} {} {}}
