(library picolo.application.Picolo-Application


(import (jazz.system.application))


(class Picolo-Application extends Application
  
  
  (slot cataloguer initialize (new Cataloguer))

  
  (method (process-name)
    "Picolo")


  (method (process-version)
    {Version 1 0 1})


  (method (new-toplevel)
    (new Picolo-Toplevel))
  
  
  (method (start-process rest)
    (nextmethod rest)
    (set-application-accelerators (get-accelerator-table (class-of self))))
  
  
  (method (finish-process rest)
    (bind-optionals ((boot-time nil)) rest
      (nextmethod rest)
      (display-boot-time boot-time)))
   

  ;;;
  ;;;; Actions
  ;;;


  (definition class-actions
    {Form   (new     Action-List         ) ()
      {Form   (new     Action-Item       ) (:shortcut (F2)                       :action-handler {Event-Handler :focus on-paste})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "A") :action-handler {Event-Handler :application on-open-favorite :char "A"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "B") :action-handler {Event-Handler :application on-open-favorite :char "B"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "C") :action-handler {Event-Handler :application on-open-favorite :char "C"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "D") :action-handler {Event-Handler :application on-open-favorite :char "D"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "E") :action-handler {Event-Handler :application on-open-favorite :char "E"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "F") :action-handler {Event-Handler :application on-open-favorite :char "F"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "G") :action-handler {Event-Handler :application on-open-favorite :char "G"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "H") :action-handler {Event-Handler :application on-open-favorite :char "H"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "I") :action-handler {Event-Handler :application on-open-favorite :char "I"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "J") :action-handler {Event-Handler :application on-open-favorite :char "J"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "K") :action-handler {Event-Handler :application on-open-favorite :char "K"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "L") :action-handler {Event-Handler :application on-open-favorite :char "L"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "M") :action-handler {Event-Handler :application on-open-favorite :char "M"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "N") :action-handler {Event-Handler :application on-open-favorite :char "N"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "O") :action-handler {Event-Handler :application on-open-favorite :char "O"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "P") :action-handler {Event-Handler :application on-open-favorite :char "P"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "Q") :action-handler {Event-Handler :application on-open-favorite :char "Q"})}
      {Form   (new     Action-Item       ) (:shortcut (:control :shift :alt "R") :action-handler {Event-Handler :application on-open-favorite :char "R"})}
