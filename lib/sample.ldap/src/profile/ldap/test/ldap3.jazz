;;;; LDAP3 Test
;;;


(library profile.ldap.test.ldap3 jazz


(import (ldap.ldap3)
        (profile.ldap.test))


(class LDAP3-Test extends LDAP-Test
  
  
  (slot connection)


  (method override (setup host entries)
    (let ((conn (new LDAP-Connection host)))
      (for-each (function (entry)
                  (bind (name value) entry
                    (add~ conn name value)))
                entries)
      (set! connection conn)))
  
  
  (method override (search target proc)
    (for-each (function (entry)
                (proc (get-name~ entry)
                      (get-value~ entry)))
              (search~ connection target)))))
