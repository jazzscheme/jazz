(library raytrace.log jazz


(definition current-log-port
  (make-parameter (current-error-port)))


; Prints all of its args like 'print', but without the serious bug of named parameters
(definition (display-args port . rest)
  (for-each (lambda (s)
              (display s port))
            rest))

(definition (log-args . rest)
  (apply display-args (current-error-port) (append rest '("\n")))))
