(library jazz.ui.resizer jazz


(import (jazz.ui)
        (jazz.platform.windows)
        (jazz.library)
        (jazz.utilities))


(constant Border-Size 4)
(constant Handle-Size 16)


(constant Part-Array
  '(((-1 . -1) (-1 . -1) ( 0 . -1) ( 1 . -1) ( 1 . -1))
    ((-1 . -1)     #f        #f        #f    ( 1 . -1))
    ((-1 .  0)     #f        #f        #f    ( 1 .  0))
    ((-1 .  1)     #f        #f        #f    ( 1 .  1))
    ((-1 .  1) (-1 .  1) ( 0 .  1) ( 1 .  1) ( 1 .  1))))


(constant Part-Cursor
  (list
    (cons '(-1 . -1) IDC_SIZENWSE)
    (cons '( 0 . -1) IDC_SIZENS)
    (cons '( 1 . -1) IDC_SIZENESW)
    (cons '(-1 .  0) IDC_SIZEWE)
    (cons '( 0 .  0) IDC_ARROW)
    (cons '( 1 .  0) IDC_SIZEWE)
    (cons '(-1 .  1) IDC_SIZENESW)
    (cons '( 0 .  1) IDC_SIZENS)
    (cons '( 1 .  1) IDC_SIZENWSE)))


;;;
;;;; Cursor
;;;


(definition public (find-resize-part pt size)
  (let ((p (function dynamic (n s)
             (let ((border Border-Size)
                   (handle (min Handle-Size (quotient s 3))))
               (cond ((< n border) 0)
                     ((< n handle) 1)
                     ((>= n (- s border)) 4)
                     ((> n (- s handle)) 3)
                     (else 2))))))
    (element (element Part-Array (p (get-v~ pt) (get-height~ size)))
             (p (get-h~ pt) (get-width~ size)))))


(definition public (get-resize-cursor part)
  (cdr (assoc part Part-Cursor)))


(definition public (size-client dh dv part proc)
  (let ((p (function dynamic (r)
             (case r
               ((-1) (values 1 -1))
               ( (0) (values 0  0))
               ( (1) (values 0  1))))))
    (receive (mh rh) (p (car part))
      (receive (mv rv) (p (cdr part))
        (proc (* dh mh) (* dv mv) (* dh rh) (* dv rv)))))))
