(library jazz.ui.text.Ruler jazz


(import (jazz.jml)
        (jazz.ui)
        (jazz.literals)
        (jazz.library)
        (jazz.utilities))


(class Ruler extends Header-View


  (form
    (<install>               shown?: #f
      (<!>     name: content layout-type: fill)))
  
  
  ;;;
  ;;;; Layout
  ;;;
  
  
  (method (get-header-height)
    (if shown? 22 0))


  ;;;
  ;;;; Drawing
  ;;;
  
  
  (definition Tabbed-Pen
    (new Pen color: {Color name: Dark-Red}))
  
  (definition Untabbed-Pen
    (new Pen color: (new Color red: 90 green: 90 blue: 90)))
  
  
  (method (draw surface context update lh lv)
    (with ((update-rect (get-update-rect surface update lh lv)))
      (let ((width (get-width))
            (height (get-header-height)))
        (when (< (get-top~ update-rect) height)
          (draw-ruler surface width height)))))
  
  
  (method (draw-ruler surface width height)
    (draw-border surface width height)
    (draw-measurements surface width height))
  
  
  (method (draw-border surface width height)
    (with ((outer (new Rect 0 0 width height))
           (inner (inflate-rect outer -1 -1)))
      (draw-edge~ surface outer inner: 'raised edges: 'rectangle)
      (fill-rect~ surface inner {Color name: Medium})))
  
  
  (method (draw-measurements surface width height)
    (let* ((unit 8)
           (major 4)
           (number (quotient width unit))
           (limit (- width 1))
           (left (get-left-padding~ client))
           (tabs (get-user-tabs~ client)))
      (set-pen~ surface {Pen name: Black})
      (for-each (function dynamic (n)
                  (let* ((rank (* n unit))
                         (pixel (+ left rank)))
                    (unless (>= pixel limit)
                      (let* ((tab? (memq? rank tabs))
                             (major? (= (modulo n major) 0))
                             (offset (if major? 5 8)))
                        (set-pen~ surface (if tab? Tabbed-Pen Untabbed-Pen))
                        (move-to~ surface pixel offset)
                        (line-to~ surface pixel (- height offset))))))
                (naturals 0 (+ number 1)))))
  

  ;;;
  ;;;; Cursor
  ;;;


  (method (cursor-update pos)
    (set-cursor :arrow))


  ;;;
  ;;;; Mouse
  ;;;
  
  
  (method (mouse-down pos)
    )
  
  
  (method (drag-move pos)
    )
  
  
  (method (drag-up pos . rest)
    )))
