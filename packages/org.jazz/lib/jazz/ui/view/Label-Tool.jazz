(library jazz.ui.view.Label-Tool jazz


(import (jazz.ui)
        (jazz.literals)
        (jazz.library)
        (jazz.utilities))


(class Label-Tool extends Tool-Button
  
  
  (property justification initialize 'center             getter get-justification setter set-justification)
  (property color         initialize {Color name: Black} getter get-color         setter set-color)
  
  
  (method (default-size)
    {Dimension 100 20})
  
  
  ;;;
  ;;;; Access
  ;;;
  
  
  (method public (get-justification)
    justification)
  
  
  (method public (set-justification value)
    (set! justification value)
    (invalidate-view))


  (method public (get-color)
    color)


  (method public (set-color value)
    (set! color value)
    (invalidate-view))

  
  ;;;
  ;;;; Drawing
  ;;;


  (method (draw-tool dc context)
    (let ((offset (if (eq? (get-state) 'pushed) 1 0)))
      (let* ((title (localize title))
             (extent (get-text-extent~ dc title))
             (pos (justify extent (get-size) (list justification 'center))))
        (set-text-color~ dc color)
        (draw-text~ dc (+ offset (get-h~ pos)) (+ offset (get-v~ pos)) title enabled?))))))
