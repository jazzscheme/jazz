(library jazz.validate.suite.Binding-Tester jazz


(import (jazz.jml)
        (jazz.library)
        (jazz.validate))


(class Binding-Tester extends Tester
  
  
  (form
    (<install> title: "Binding"))


  (method (test)
    (invoke "Let" test-let)
    (invoke "Letrec" test-letrec)
    (invoke "With" test-with)
    (invoke "Bind" test-bind)
    (invoke "Function" test-function))
  
  
  ;;;
  ;;;; Let
  ;;;


  (method (test-let)
    (validate rpt (= (let ((x 2)) x) 2))
    (validate rpt (= (let ((x 2)) (+ x x)) 4))
    (validate rpt (= (let ((x 2) (y 3)) (+ x y y)) 8))
    (validate rpt (= (let ((x 2)) (let ((y 3)) (+ x y y))) 8))
    (validate rpt (= (let ((x 2)) (set! x 3) x) 3))
    (validate rpt (= (let ((x) (y)) (set! x 2) (set! y 3) (+ x y)) 5))
    (validate rpt (= (let ((x 2)) (let ((x (+ x x))) x)) 4))
  
    @what-the-fuck
    (validate rpt (equal? (reverse
                            (let ((lst '()) (x 2))
                              (set! lst (cons x lst))
                              (let ((x 3))
                                (set! lst (cons x lst))
                                (let ((x 5))
                                  (set! lst (cons x lst)))
                                (set! lst (cons x lst)))
                              (set! lst (cons x lst)))
                            (set! lst (cons x lst)))
                          '(2 3 5 3 2)))
    
    @Interpreted
    (begin
      
      @free-reporting-is-now-done-at-the-category-level
      (validate rpt (error? (code-walk '(let ((x 2))
                                          (let ((y 3)))
                                          (+ x y))
                                       self
                                       '())))))
  
  
  ;;;
  ;;;; Letrec
  ;;;


  (method (test-letrec)
    (validate rpt (= (letrec ((fact
                                (function (n)
                                  (if (= n 0)
                                      1
                                    (* n (fact (- n 1)))))))
                       (fact 5))
                     120))
    
    @Interpreted
    (begin
      (validate rpt (error? ((function (x)
                               (letrec ((x (+ x x)))
                                 x))
                             3)))))
  
  
  ;;;
  ;;;; With
  ;;;
  
  
  (method (test-with)
    )
  
  
  ;;;
  ;;;; Bind
  ;;;


  (method (test-bind)
    (validate rpt (= (bind (x y z) (list 1 2 3) (+ x y z)) 6))
    
    @Interpreted
    (begin
      
      (validate rpt (error? (bind (x y) (list 1) (+ x y))))))
  
  
  ;;;
  ;;;; Function
  ;;;


  (method (test-function)
    (validate rpt (= ((function () 2)) 2))
    (validate rpt (= ((function (x) x) 2) 2))
    (validate rpt (= ((function (x y) (+ x y)) 2 3) 5))
    (validate rpt (equal? ((function x x)) '()))
    (validate rpt (equal? ((function (x . y) y) 1 2 3 4) '(2 3 4)))
    (validate rpt (= (let ((x 2)) ((function () x))) 2))


    (validate rpt (= (let ((x 2)) ((function () x))) 2))
    (validate rpt (= (let ((x 2)) ((function () (set! x 3) x))) 3))
  
  
    (validate rpt (equal? (map (function (x) (* x x)) '(1 2 3 4 5)) '(1 4 9 16 25)))
    (validate rpt (equal? (let ((list '()))
                            (for-each (function (x)
                                        (set! list (cons (* x x) list)))
                                      '(1 2 3 4 5))
                            (reverse list))
                          '(1 4 9 16 25))))))
