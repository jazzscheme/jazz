(library jazz.validate.suite.Format-Tester jazz


(import (jazz.jml)
        (jazz.library)
        (jazz.validate))


(class Format-Tester extends Tester
  
  
  (form
    (<install> title: "Format"))


  (method (test)
    (invoke {} test-format))
  
  
  ;;;
  ;;;; Format
  ;;;


  (method (test-format)
    ;; base
    (validate rpt (= (format "hello") "hello"))
    ;; ascii
    (validate rpt (= (format "{a}" 2) "2"))
    ;; sexpr
    (validate rpt (= (format "{s}" "hello") "\"hello\""))
    ;; text
    (validate rpt (= (format "{t}" 2) "2"))
    (validate rpt (= (format "{t}" "hello") "\"hello\""))
    ;; print
    (validate rpt (= (format "{p}" "hello" :human) "hello"))
    (validate rpt (= (format "{p}" "hello" :reader) "\"hello\""))
    ;; char
    (validate rpt (= (format "{c}" #\a) "a"))
    ;; unsigned
    (validate rpt (= (format "{u}" -1) "4294967295"))
    ;; hexadecimal
    (validate rpt (= (format "{x}" #x0A) "0A"))
    ;; binary
    (validate rpt (= (format "{b}" #b1010) "1010"))
    ;; real
    (validate rpt (= (format "{r}" 2.3) "2.300"))
    (validate rpt (= (format "{r :precision 5}" 2.3) "2.30000"))
    ;; list
    (validate rpt (= (format "{l :detail :human}" '("a" "b")) "a b"))
    ;; properties
    (validate rpt (= (format "{k}" '(:a 2 :b 3)) " :a 2 :b 3"))
    ;; column
    (validate rpt (= (format "{_}") " "))
    (validate rpt (= (format "{_ :v}" 3) "   "))
    ;; tab
    (validate rpt (= (format "{&}") (coerce #\tab String)))
    ;; newline
    (validate rpt (= (format "{%}") (coerce (list #\newline) String)))
    ;; freshline
    (validate rpt (= (format "{$}") ""))
    ;; localize
    ;; wait (validate rpt (= (format "{z}" "yes") "yes"))
    ;; conditional
    (validate rpt (= (format "{?foo{a}bar{c}~}ZZZ{a}" {} #\* 'yyy) "ZZZyyy"))
    (validate rpt (= (format "{?foo{a}bar{c}~}ZZZ{a}" 'hello #\* 'yyy) "foohellobar*ZZZyyy"))
    (validate rpt (= (format "{?:foo{a}bar{c}~}ZZZ{a}" #f {} {} 'yyy) "ZZZyyy"))
    (validate rpt (= (format "{?:foo{a}bar{c}~}ZZZ{a}" #t 'hello #\* 'yyy) "foohellobar*ZZZyyy"))
    ;; justification
    (validate rpt (= (format "{s :width 5}" 2) "2    "))
    (validate rpt (= (format "{s :width 5 :justify :left}" 2) "2    "))
    (validate rpt (= (format "{s :width 5 :justify :right :padding #\\x}" 2) "xxxx2"))
    (validate rpt (= (format "{s :width 3}" 12345) "12345"))
    (validate rpt (= (format "{s :width :v :justify :v :padding :v}" 2 5 :right #\x) "xxxx2"))
    ;; error
    (validate rpt (error? (format "{a}" 2)))
    (validate rpt (error? (format "{q}")))
    (validate rpt (error? (format "{a}")))
    (validate rpt (error? (format "{a}" 2 3)))
    (validate rpt (error? (format "{a :some}" 2))))))
