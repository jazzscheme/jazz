(library jazz.validate.suite.Function-Tester jazz


(import (jazz.jml)
        (jazz.library)
        (jazz.validate))


(class Function-Tester extends Tester
  
  
  (form
    (<install> title: "Function"))
  
  
  @convert (


  (method (test)
    (invoke "Dynamic Closure" test-dynamic-closure)
    (invoke "Indefinite extent" test-indefinite-extent)
    @wait-outer-binding
    (invoke "Outer Binding" test-outer-binding)
    (invoke "Rest Binding" test-rest-binding)
    (invoke "Function" test-function)
    (invoke "Recursivity" test-recursivity))
  
  
  ;;;
  ;;;; Dynamic Closure
  ;;;


  (method (add x list)
    (map (function (y)
           (+ x y))
         list))

  
  (method (test-dynamic-closure)
    (validate rpt (= (add 10 '(1 2 3)) '(11 12 13))))
  
  
  ;;;
  ;;;; Indefinite extent
  ;;;


  (method (adder x)
    (function (n)
      (+ n x)))

  
  (definition add10
    (adder 10))
  
  
  (method (foo x)
    (let ((y (+ x x)))
      (function (n)
        (+ n x y))))
  
  
  (definition foo5
    (foo 5))
    
  
  (definition holder
    {})

  
  (method (bar)
    (set! holder {})
    (let ((proc
           (function (n flag)
             (let ((p
                    (function ()
                      n)))
               (if flag p (holder))))))
      (set! holder (proc 5 #t))
      (proc 7 #f)))

  
  (method (test-indefinite-extent)
    (validate rpt (= (map add10 '(1 2 3)) '(11 12 13)))
    (validate rpt (= (map foo5 '(1 2 3)) '(16 17 18)))
    (validate rpt (= (bar) 5)))
  
  
  ;;;
  ;;;; Outer Binding
  ;;;


  @wait-outer-binding
  (let ((x 0))
    (method (count)
      (prog1 x
        (increase! x))))

  
  @wait-outer-binding
  (method (test-outer-binding)
    (validate rpt (= (count) 0))
    (validate rpt (= (count) 1))
    (validate rpt (= (count) 2))
    (validate rpt (= (count) 3)))
  
  
  ;;;
  ;;;; Rest Binding
  ;;;

  
  (method (yoo . rest)
    (let ((x 10))
      (cons x rest)))
  
  
  (method (test-rest-binding)
    (validate rpt (= (yoo 1 2 3) '(10 1 2 3))))
  
  
  ;;;
  ;;;; Function
  ;;;


  (method (with-proc proc)
    (proc 2 3))
  
  
  (method (fn a b c)
    (* a b c))
  
  
  (method (test-with z)
    (with-proc
      (function (x y)
        (fn x y z))))
  
  
  (method (test-function)
    (validate rpt (= ((function (w) (test-with w)) 5) 30)))
  
  
  ;;;
  ;;;; Recursivity
  ;;;


  (method (fact n)
    (if (= n 0)
        1
      (* n (fact (- n 1)))))
  
  
  (method (test-recursivity)
    (validate rpt (= (fact 5) 120)))))
)