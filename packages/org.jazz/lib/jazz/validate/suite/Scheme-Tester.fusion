(library jazz.validate.suite.Scheme-Tester jazz


(import (jazz.jml)
        (jazz.library)
        (jazz.validate))


(class Scheme-Tester extends Tester
  
  
  @wait (
  (form
    (<install> title: "Scheme"))


  (method (test)
    (invoke null test-define)
    (invoke null test-let)
    (invoke null test-letstar)
    (invoke null test-named-let)
    (invoke null test-do)
    (invoke null test-and)
    (invoke null test-or))
  
  
  ;;;
  ;;;; Define
  ;;;
  
  
  (define (fact n)
    (define (fact n res)
      (if (= n 1)
          res
        (fact (- n 1) (* res n))))
    (fact n 1))
  
  
  (method (test-define)
    (validate rpt (= (fact 5) 120)))
  
  
  ;;;
  ;;;; Let
  ;;;
  
  
  (method (test-let)
    (validate rpt (= (let ((x 2) (y 3))
                       (let* ((x 5) (y (+ x x)) (z (* x y)))
                         (list x y z)))
                     '(5 4 6))))
  
  
  ;;;
  ;;;; Let*
  ;;;
  
  
  (method (test-letstar)
    (validate rpt (= (let ((x 2) (y 3))
                       (let* ((x 5) (y (+ x x)) (z (* x y)))
                         (list x y z)))
                     '(5 10 50))))
  
  
  ;;;
  ;;;; Named Let
  ;;;
  
  
  (method (test-named-let)
    (validate rpt (= (let ((sum 0))
                       (let iter ((n 1))
                            (when (/= n 5)
                              (increase! sum n)
                              (iter (+ n 1))))
                       sum)
                     10)))
  
  
  ;;;
  ;;;; Do
  ;;;
  
  
  (method (test-do)
    (validate rpt (= (do ((i 1 (+ i 1))
                          (sum 0))
                         ((= i 5) sum)
                         (increase! sum i))
                     10)))
  
  
  ;;;
  ;;;; And
  ;;;
  
  
  (method (test-and)
    (validate rpt (= (let ((x 2)) (and x (/ 6 x))) 3)))
  
  
  ;;;
  ;;;; Or
  ;;;
  
  
  (method (test-or)
    (validate rpt (= (let ((x 2)) (or false x)) 2))))))
