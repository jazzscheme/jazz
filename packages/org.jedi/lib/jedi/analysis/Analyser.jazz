(library jedi.analysis.Analyser jazz


(import (jazz.library)
        (jedi.analysis))


(class Analyser extends Object


  (slot source)
  
  
  (method protected virtual (load-categories?)
    #f)
  

  (method meta public (load-all)
    (for-each-source
      (function dynamic (category-name source properties)
        (when (not (category-loaded? category-name))
          (user-message "Loading {s}..." category-name)
          (autoload category-name))))
    (user-message "Done"))


  (method (process-category name walker)
    (set! source (get-manifest-source name))
    (call-with-input-file source
      (lambda (reader)
        (let ((expr))
          @convert-set!-returning-a-value
          (while (not (eof-object? (set! expr (read~ reader))))
            (code-walk2 expr walker))))))
  
  
  (method (process-all)
    (let ((walker (new-walker category-hook form-hook symbol-hook define-hook)))
      (for-each-source
        (function dynamic (category-name source properties)
          (user-message "Processing {s}" category-name)
          (when (and (null? (class-of category-name)) (load-categories?))
            (autoload category-name))
          (process-category category-name walker)))
      (user-message "Done")))


  (method protected virtual (load-hook param category-name entering?)
    )


  (method protected virtual (category-hook param category-name packages ascendant interfaces properties)
    )


  (method protected virtual (form-hook category param form)
    )
  

  (method protected virtual (toplevel-hook param name)
    )


  (method protected virtual (symbol-hook param symbol)
    )
  
  
  (method protected virtual (define-hook param symbol entering?)
    )
  
  
  (method public virtual (go)
    (process-all))))
