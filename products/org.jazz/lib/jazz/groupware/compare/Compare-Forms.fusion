(library jazz.groupware.compare.Compare-Forms jazz


(import (jazz.groupware)
        (jazz.jml)
        (jazz.library)
        (jazz.utilities))


(class Compare-Forms extends Compare-Trees


  (form
    (<install>
      (<!>     name: trees        title: "Forms"
        (<!>   name: blue-border
          (<!> name: blue         protocol: file))
        (<!>   name: green-border
          (<!> name: green        protocol: file)))))
  
  
  ;;;
  ;;;; Frame
  ;;;

  
  @convert-guest
  (method meta (frame-icon)
    {Bitmap-Resource "CompareForms"})
  
  
  @convert-guest
  (method meta (frame-title)
    "Compare Forms")
  
  
  ;;;
  ;;;; Form
  ;;;
  
  
  (method (form-present form)
    (get-name~ form)
    @code-present
    (get-presentation~ form))
  
  
  (method (form-image form)
    {Bitmap-Resource "OpenedFolder"}
    @code-present
    (get-class-image~ (get-model~ form)))
  
  
  ;;;
  ;;;; Compare
  ;;;
  
  
  (method (new-comparer)
    (new Form-Comparer))
  
  
  (method (scan-feedback left right)
    (user-message "Scanning {a}..." (form-present left)))
  
  
  (method (moniker->tree moniker)
    (load-form~ moniker))
  
  
  ;;;
  ;;;; Results
  ;;;
  
  
  (method (present-root left right)
    (let ((l (present-item left))
          (r (present-item right)))
      (if (= l r)
          l
        (format "{a} / {a}" l r))))
  
  
  (method (present-item item)
    (if (is? item Form)
        (form-present item)
      (car item)))
  
  
  (method (present-value kind value)
    (case kind
      ((node) "")
      ((leaf) (->string value))))
  
  
  (method (entry-image entry ref)
    (case [kind entry]
      ((node) (form-image ref))
      ((leaf) {Bitmap-Resource "Property"})))))
